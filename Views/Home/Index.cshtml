@model EDSG.Controllers.HomeViewModel
@{
    ViewData["Title"] = "EDSG - Ecossistema Digital de Serviços Geridos";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Encontre os melhores profissionais perto de si</h1>
                <p class="lead mb-4">Conectamos clientes com profissionais qualificados em diversas áreas. Serviços de qualidade, quando e onde precisa.</p>
                <div class="d-flex flex-wrap gap-3">
                    <a asp-controller="Home" asp-action="Procurar" class="btn btn-light btn-lg">
                        <i class="bi bi-search"></i> Procurar Profissionais
                    </a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-person-plus"></i> Registar Gratuitamente
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80"
                     class="img-fluid rounded shadow" alt="Profissionais trabalhando">
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-people display-1 text-primary mb-3"></i>
                        <h3 class="card-title">@Model.TotalProfissionais</h3>
                        <p class="card-text">Profissionais Registados</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-check-circle display-1 text-success mb-3"></i>
                        <h3 class="card-title">@Model.TotalServicos</h3>
                        <p class="card-text">Serviços Realizados</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-star display-1 text-warning mb-3"></i>
                        <h3 class="card-title">4.8/5</h3>
                        <p class="card-text">Avaliação Média</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Professionals -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Profissionais Mais Bem Avaliados</h2>
        <div class="row">
            @foreach (var profissional in Model.MelhoresAvaliados)
            {
                var roundedRating = profissional.AvaliacaoMedia > 0 ? Math.Round(profissional.AvaliacaoMedia) : 0;
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="flex-shrink-0">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                         style="width: 50px; height: 50px;">
                                        <span class="h5 mb-0">@profissional.Nome.Substring(0, 1)</span>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="card-title mb-0">@profissional.Nome</h5>
                                    <small class="text-muted">@profissional.Localizacao</small>
                                </div>
                            </div>
                            <p class="card-text text-muted">@profissional.Categoria - @profissional.Especialidade</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="text-warning">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            <i class="bi @(i < roundedRating ? "bi-star-fill" : "bi-star")"></i>
                                        }
                                    </span>
                                    <span class="ms-2">(@profissional.AvaliacaoMedia.ToString("F1"))</span>
                                </div>
                                <span class="badge bg-primary">€@profissional.PrecoBase/h</span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-controller="Home" asp-action="DetalhesProfissional" asp-route-id="@profissional.Id"
                               class="btn btn-outline-primary btn-sm w-100">Ver Perfil</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Procurar" class="btn btn-primary">Ver Todos os Profissionais</a>
        </div>
    </div>
</section>

<!-- How It Works -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Como Funciona</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card border-0 h-100">
                    <div class="card-body">
                        <div class="step-number bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 60px; height: 60px;">
                            <i class="bi bi-search display-6"></i>
                        </div>
                        <h4 class="card-title">1. Pesquise</h4>
                        <p class="card-text">Encontre profissionais qualificados na sua área de interesse.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 h-100">
                    <div class="card-body">
                        <div class="step-number bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 60px; height: 60px;">
                            <i class="bi bi-chat-dots display-6"></i>
                        </div>
                        <h4 class="card-title">2. Contate</h4>
                        <p class="card-text">Troque mensagens e combine todos os detalhes do serviço.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 h-100">
                    <div class="card-body">
                        <div class="step-number bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 60px; height: 60px;">
                            <i class="bi bi-check-circle display-6"></i>
                        </div>
                        <h4 class="card-title">3. Contrate</h4>
                        <p class="card-text">Realize o serviço e avalie a experiência.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Services -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Serviços Recentes</h2>
        @if (Model.ServicosRecentes.Any())
        {
            <div class="row">
                @foreach (var servico in Model.ServicosRecentes)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@servico.Titulo</h5>
                                <p class="card-text text-muted">@servico.Descricao?.Substring(0, Math.Min(100, servico.Descricao.Length))...</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="bi bi-person"></i> @servico.Cliente?.Nome
                                    </small>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> @servico.DataConclusao?.ToString("dd/MM/yyyy")
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center">
                <p class="text-muted">Ainda não há serviços recentes para mostrar.</p>
            </div>
        }
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Pronto para encontrar o profissional perfeito?</h2>
        <p class="lead mb-4">Junte-se a milhares de clientes satisfeitos.</p>
        <a asp-controller="Home" asp-action="Procurar" class="btn btn-light btn-lg">
            Começar Agora <i class="bi bi-arrow-right"></i>
        </a>
    </div>
</section>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .step-number {
        transition: transform 0.3s;
    }

        .step-number:hover {
            transform: scale(1.1);
        }

    .card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .btn-lg {
        padding: 0.75rem 2rem;
    }
</style>