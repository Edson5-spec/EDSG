    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Portfolio Modal Functionality
            const portfolioModal = document.getElementById('portfolioModal');
            if (portfolioModal) {
                const carousel = new bootstrap.Carousel(document.getElementById('portfolioCarousel'));
                const totalSlides = @profissional.PortfolioItems?.Count ?? 0;
                
                // Update slide counter
                document.getElementById('totalSlides').textContent = totalSlides;
                
                // Listen for slide events
                document.getElementById('portfolioCarousel').addEventListener('slid.bs.carousel', function (event) {
                    const activeIndex = event.to;
                    document.getElementById('currentSlide').textContent = activeIndex + 1;
                    
                    // Update active thumbnail
                    document.querySelectorAll('.thumbnail-item').forEach((thumb, index) => {
                        thumb.classList.toggle('active', index === activeIndex);
                    });
                });
                
                // Filter portfolio items
                document.getElementById('portfolioFilter')?.addEventListener('change', function() {
                    const filter = this.value;
                    const thumbnails = document.querySelectorAll('.thumbnail-item');
                    
                    thumbnails.forEach(thumb => {
                        switch(filter) {
                            case 'all':
                                thumb.style.display = 'block';
                                break;
                            case 'featured':
                                if (thumb.dataset.featured === 'True') {
                                    thumb.style.display = 'block';
                                } else {
                                    thumb.style.display = 'none';
                                }
                                break;
                            case 'recent':
                                const itemDate = new Date(thumb.dataset.date || 0);
                                const thirtyDaysAgo = new Date();
                                thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);
                                
                                if (itemDate >= thirtyDaysAgo) {
                                    thumb.style.display = 'block';
                                } else {
                                    thumb.style.display = 'none';
                                }
                                break;
                        }
                    });
                    
                    // Update count badge
                    const visibleCount = Array.from(thumbnails).filter(t => t.style.display !== 'none').length;
                    document.getElementById('portfolioCountBadge').textContent = visibleCount;
                });
            }

            // Function to open portfolio modal at specific slide
            window.openPortfolioModal = function(slideIndex) {
                const modal = new bootstrap.Modal(document.getElementById('portfolioModal'));
                modal.show();
                
                // Wait for modal to be shown, then navigate to slide
                setTimeout(() => {
                    const carousel = bootstrap.Carousel.getInstance(document.getElementById('portfolioCarousel'));
                    if (carousel) {
                        carousel.to(slideIndex);
                    }
                }, 500);
            };

            // Function to go to specific slide from thumbnail
            window.goToSlide = function(slideIndex) {
                const carousel = bootstrap.Carousel.getInstance(document.getElementById('portfolioCarousel'));
                if (carousel) {
                    carousel.to(slideIndex);
                }
            };

            // Download current image
            window.downloadCurrentImage = function() {
                const currentSlide = document.querySelector('#portfolioCarousel .carousel-item.active');
                const image = currentSlide?.querySelector('img');
                
                if (image && image.src) {
                    const link = document.createElement('a');
                    link.href = image.src;
                    link.download = 'portfolio-item.jpg';
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                    
                    // Show success message
                    showToast('Imagem baixada com sucesso!', 'success');
                } else {
                    showToast('Não foi possível baixar a imagem.', 'danger');
                }
            };

            // Share Profile
            document.getElementById('shareProfileBtn')?.addEventListener('click', function() {
                const shareUrl = window.location.href;
                const shareText = `Confira o portfólio de ${profissional.Nome} no EDSG`;

                if (navigator.share) {
                    navigator.share({
                        title: `Portfólio - ${profissional.Nome}`,
                        text: shareText,
                        url: shareUrl
                    });
                } else {
                    navigator.clipboard.writeText(shareUrl).then(() => {
                        showToast('Link copiado para a área de transferência!', 'success');
                    });
                }
            });

            // Read More functionality for bio
            const bioText = document.getElementById('bioText');
            const readMoreBtn = document.getElementById('readMoreBtn');

            if (bioText && readMoreBtn) {
                const fullText = bioText.innerHTML;
                const shortText = fullText.substring(0, 500) + '...';

                if (fullText.length > 500) {
                    bioText.innerHTML = shortText;
                    readMoreBtn.style.display = 'block';
                    
                    readMoreBtn.addEventListener('click', function() {
                        if (bioText.innerHTML === shortText) {
                            bioText.innerHTML = fullText;
                            this.innerHTML = 'Ler menos <i class="bi bi-chevron-up ms-1"></i>';
                        } else {
                            bioText.innerHTML = shortText;
                            this.innerHTML = 'Ler mais <i class="bi bi-chevron-down ms-1"></i>';
                        }
                    });
                } else {
                    readMoreBtn.style.display = 'none';
                }
            }

            // Load More Reviews
            document.getElementById('loadMoreReviews')?.addEventListener('click', async function(e) {
                e.preventDefault();
                const originalText = this.innerHTML;
                this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> A carregar...';
                this.disabled = true;

                // Simulate loading
                setTimeout(() => {
                    this.innerHTML = '<i class="bi bi-check-circle me-1"></i> Não há mais avaliações';
                    this.classList.remove('btn-outline-primary');
                    this.classList.add('btn-outline-secondary');
                    this.disabled = true;
                }, 1500);
            });

            // Toast notification function
            function showToast(message, type = 'info') {
                // Create toast container if it doesn't exist
                let container = document.getElementById('toastContainer');
                if (!container) {
                    container = document.createElement('div');
                    container.id = 'toastContainer';
                    container.className = 'toast-container position-fixed bottom-0 end-0 p-3';
                    container.style.zIndex = '1060';
                    document.body.appendChild(container);
                }

                // Create toast
                const toast = document.createElement('div');
                toast.className = `toast align-items-center text-bg-${type} border-0`;
                toast.setAttribute('role', 'alert');
                
                toast.innerHTML = `
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="bi ${type === 'success' ? 'bi-check-circle' : 'bi-info-circle'} me-2"></i>
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                `;

                container.appendChild(toast);
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();

                // Remove toast after it's hidden
                toast.addEventListener('hidden.bs.toast', () => {
                    toast.remove();
                });
            }

            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>

