@model EDSG.Controllers.DetalhesProfissionalViewModel
@using System

@{
    ViewData["Title"] = Model?.Profissional?.Nome ?? "Perfil Profissional";
    var profissional = Model.Profissional;
    var avaliacaoMedia = Model.AvaliacaoMedia;
    var totalAvaliacoes = Model.TotalAvaliacoes;
    var servicosConcluidos = Model.ServicosConcluidos;
    var isOnline = DateTime.Now.Hour >= 9 && DateTime.Now.Hour <= 18;
}

<!-- Modal do Portfólio Completo -->
<div class="modal fade" id="portfolioModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <div class="d-flex align-items-center w-100">
                    <div class="flex-grow-1">
                        <h5 class="modal-title mb-0">
                            <i class="bi bi-images me-2"></i>
                            Portfólio de @profissional.Nome
                            <span class="badge bg-primary ms-2" id="portfolioCountBadge">@profissional.PortfolioItems?.Count</span>
                        </h5>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <select class="form-select form-select-sm" id="portfolioFilter">
                                <option value="all">Todos</option>
                                <option value="featured">Destacados</option>
                                <option value="recent">Mais Recentes</option>
                            </select>
                        </div>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                </div>
            </div>
            <div class="modal-body p-0">
                @if (profissional.PortfolioItems?.Any() == true) {
                    <div class="portfolio-fullscreen">
                        <!-- Carousel Principal -->
                        <div id="portfolioCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner" id="portfolioCarouselInner">
                                @foreach (var item in profissional.PortfolioItems.OrderByDescending(p => p.IsFeatured).ThenByDescending(p => p.DataProjeto))
                                {
                                    <div class="carousel-item @(item == profissional.PortfolioItems.First() ? "active" : "")">
                                        <div class="portfolio-modal-content">
                                            <div class="portfolio-image-container">
                                                @if (!string.IsNullOrEmpty(item.ImagemUrl)) {
                                                    <img src="@item.ImagemUrl" 
                                                         class="img-fluid" 
                                                         alt="@item.Titulo"
                                                         loading="lazy"
                                                         id="carouselImage">
                                                } else {
                                                    <div class="empty-image-placeholder">
                                                        <i class="bi bi-image text-muted display-1"></i>
                                                        <p class="text-muted mt-3">Imagem não disponível</p>
                                                    </div>
                                                }
                                                @if (item.IsFeatured) {
                                                    <div class="featured-badge-large">
                                                        <i class="bi bi-star-fill"></i> Trabalho Destacado
                                                    </div>
                                                }
                                            </div>
                                            <div class="portfolio-details">
                                                <div class="portfolio-details-content">
                                                    <h3 class="portfolio-title-large">@item.Titulo</h3>
                                                    @if (!string.IsNullOrEmpty(item.Descricao)) {
                                                        <div class="portfolio-description-large">
                                                            <p>@item.Descricao</p>
                                                        </div>
                                                    }
                                                    <div class="portfolio-meta-large">
                                                        <div class="meta-item">
                                                            <i class="bi bi-calendar text-primary"></i>
                                                            <div>
                                                                <span class="meta-label">Data do Projeto</span>
                                                                <span class="meta-value">@(item.DataProjeto?.ToString("dd/MM/yyyy") ?? "Não especificada")</span>
                                                            </div>
                                                        </div>
                                                        <div class="meta-item">
                                                            <i class="bi bi-clock text-info"></i>
                                                            <div>
                                                                <span class="meta-label">Adicionado em</span>
                                                                <span class="meta-value">@item.DataCriacao.ToString("dd/MM/yyyy")</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#portfolioCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                                <span class="visually-hidden">Anterior</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#portfolioCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                                <span class="visually-hidden">Próximo</span>
                            </button>
                        </div>
                        
                        <!-- Miniaturas -->
                        <div class="portfolio-thumbnails">
                            <div class="thumbnails-container" id="thumbnailsContainer">
                                @foreach (var item in profissional.PortfolioItems.OrderByDescending(p => p.IsFeatured).ThenByDescending(p => p.DataProjeto))
                                {
                                    <div class="thumbnail-item" 
                                         data-item-id="@item.Id"
                                         data-featured="@item.IsFeatured"
                                         data-date="@item.DataProjeto?.ToString("yyyy-MM-dd")">
                                        <div class="thumbnail-inner" onclick="goToSlide(@profissional.PortfolioItems.ToList().IndexOf(item))">
                                            @if (!string.IsNullOrEmpty(item.ImagemUrl)) {
                                                <img src="@item.ImagemUrl" 
                                                     class="img-fluid" 
                                                     alt="@item.Titulo"
                                                     loading="lazy">
                                            } else {
                                                <div class="thumbnail-placeholder">
                                                    <i class="bi bi-image"></i>
                                                </div>
                                            }
                                            @if (item.IsFeatured) {
                                                <div class="thumbnail-featured">
                                                    <i class="bi bi-star-fill"></i>
                                                </div>
                                            }
                                            <div class="thumbnail-overlay">
                                                <h6>@item.Titulo</h6>
                                                <small>@item.DataProjeto?.ToString("MMM yyyy")</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                } else {
                    <div class="empty-portfolio-fullscreen">
                        <div class="empty-state-large">
                            <i class="bi bi-images display-1 text-muted mb-4"></i>
                            <h3 class="text-muted mb-3">Portfólio Vazio</h3>
                            <p class="text-muted mb-4">Este profissional ainda não adicionou trabalhos ao portfólio.</p>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer bg-light">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <div class="current-slide-info">
                        <span id="currentSlide">1</span> de <span id="totalSlides">@profissional.PortfolioItems?.Count</span>
                    </div>
                    <div class="modal-actions">
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                            <i class="bi bi-x-lg me-1"></i> Fechar
                        </button>
                        <button type="button" class="btn btn-primary" onclick="downloadCurrentImage()">
                            <i class="bi bi-download me-1"></i> Baixar Imagem
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid px-lg-5 py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                    <i class="bi bi-house-door me-1"></i> Início
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Procurar" class="text-decoration-none">
                    <i class="bi bi-search me-1"></i> Procurar Profissionais
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="bi bi-person me-1"></i> @profissional.Nome
            </li>
        </ol>
    </nav>

    <!-- Profile Header -->
    <div class="profile-header mb-5">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="d-flex align-items-start">
                    <div class="profile-avatar me-4">
                        <div class="avatar-container">
                            @if (!string.IsNullOrEmpty(profissional.FotoPerfil)) {
                                <img src="@profissional.FotoPerfil"
                                     class="profile-avatar-img"
                                     alt="@profissional.Nome"
                                     onerror="this.src='https://ui-avatars.com/api/?name=@Uri.EscapeDataString(profissional.Nome)&background=0D8ABC&color=fff&size=200'">
                            } else {
                                <div class="avatar-placeholder">
                                    @profissional.Nome.Substring(0, 1).ToUpper()
                                </div>
                            }
                            @if (isOnline) {
                                <span class="online-status" title="Online agora">
                                    <i class="bi bi-circle-fill"></i>
                                </span>
                            }
                        </div>
                    </div>
                    <div class="profile-info flex-grow-1">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h1 class="profile-name mb-1">@profissional.Nome</h1>
                                <div class="profile-badges mb-3">
                                    <span class="badge badge-category">
                                        <i class="bi bi-tag me-1"></i> @profissional.Categoria
                                    </span>
                                    @if (!string.IsNullOrEmpty(profissional.Especialidade)) {
                                        <span class="badge badge-specialty">
                                            <i class="bi bi-star me-1"></i> @profissional.Especialidade
                                        </span>
                                    }
                                    @if (profissional.IsPremium) {
                                        <span class="badge badge-premium">
                                            <i class="bi bi-award me-1"></i> Premium
                                        </span>
                                    }
                                </div>
                                <div class="profile-meta">
                                    <span class="meta-item">
                                        <i class="bi bi-geo-alt-fill"></i>
                                        @profissional.Localizacao
                                    </span>
                                    <span class="meta-item">
                                        <i class="bi bi-calendar-check"></i>
                                        Membro desde @profissional.DataRegistro.ToString("MMMM yyyy")
                                    </span>
                                </div>
                            </div>
                            <div class="profile-actions">
                                <button class="btn btn-outline-primary btn-sm me-2" id="shareProfileBtn">
                                    <i class="bi bi-share"></i>
                                </button>
                                @if (User.Identity.IsAuthenticated) {
                                    <form asp-controller="Dashboard" asp-action="AdicionarFavorito" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="profissionalId" value="@profissional.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-heart"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                        
                        <div class="profile-rating mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <div class="star-rating-large me-3">
                                    @{
                                        int fullStars = (int)Math.Floor(avaliacaoMedia);
                                        bool hasHalfStar = (avaliacaoMedia - fullStars) >= 0.5;
                                        int emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
                                    }
                                    @for (int i = 0; i < fullStars; i++) {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    @if (hasHalfStar) {
                                        <i class="bi bi-star-half"></i>
                                    }
                                    @for (int i = 0; i < emptyStars; i++) {
                                        <i class="bi bi-star"></i>
                                    }
                                </div>
                                <div>
                                    <span class="rating-value">@avaliacaoMedia.ToString("F1")</span>
                                    <span class="rating-count">(@totalAvaliacoes avaliações)</span>
                                </div>
                            </div>
                            <div class="rating-stats">
                                <div class="stat-item">
                                    <i class="bi bi-check-circle text-success"></i>
                                    <span>@servicosConcluidos serviços concluídos</span>
                                </div>
                                <div class="stat-item">
                                    <i class="bi bi-clock text-info"></i>
                                    <span>@(isOnline ? "Online agora" : "Responde em 24h")</span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Main CTA Button -->
                        <div class="profile-cta">
                            @if (User.Identity.IsAuthenticated) {
                                <a asp-controller="Dashboard" asp-action="NovoServico"
                                   asp-route-profissionalId="@profissional.Id"
                                   class="btn btn-primary btn-lg px-5">
                                    <i class="bi bi-file-earmark-text me-2"></i> Solicitar Serviço
                                </a>
                            } else {
                                <a asp-controller="Account" asp-action="Login"
                                   asp-route-returnUrl="@Context.Request.Path"
                                   class="btn btn-primary btn-lg px-5">
                                    <i class="bi bi-box-arrow-in-right me-2"></i> Entrar para Solicitar
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="price-card">
                    <div class="price-header">
                        <i class="bi bi-currency-euro"></i>
                        <span>Preço Base</span>
                    </div>
                    <div class="price-value">
                        @if (profissional.PrecoBase.HasValue) {
                            <text>€@profissional.PrecoBase.Value.ToString("F0")</text>
                        } else {
                            <text>Sob consulta</text>
                        }
                    </div>
                    <div class="price-unit">por hora</div>
                    <div class="price-note">
                        <i class="bi bi-info-circle"></i>
                        Preços podem variar conforme o projeto
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- About Section -->
            <section class="profile-section mb-5">
                <div class="section-header">
                    <h2><i class="bi bi-person-lines-fill me-2"></i> Sobre</h2>
                </div>
                <div class="section-content">
                    @if (!string.IsNullOrEmpty(profissional.Bio)) {
                        <div class="bio-content" id="bioText">
                            <p>@Html.Raw(profissional.Bio.Replace("\n", "<br>"))</p>
                        </div>
                        @if (profissional.Bio.Length > 500) {
                            <button class="btn btn-link btn-read-more mt-3" id="readMoreBtn">
                                Ler mais <i class="bi bi-chevron-down ms-1"></i>
                            </button>
                        }
                    } else {
                        <div class="empty-state">
                            <i class="bi bi-card-text"></i>
                            <p>Este profissional ainda não adicionou uma descrição.</p>
                        </div>
                    }
                </div>
            </section>

            <!-- Portfolio Section -->
            @if (profissional.PortfolioItems?.Any() == true) {
                <section class="profile-section mb-5">
                    <div class="section-header d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi bi-images me-2"></i> Meus Trabalhos
                            <span class="badge bg-primary ms-2">@profissional.PortfolioItems.Count</span>
                        </h2>
                        <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#portfolioModal">
                            <i class="bi bi-arrows-angle-expand me-1"></i> Ver Portfólio Completo
                        </button>
                    </div>
                    <div class="section-content">
                        <!-- Featured Works -->
                        @if (profissional.PortfolioItems.Any(p => p.IsFeatured)) {
                            <div class="featured-works mb-5">
                                <h4 class="section-subtitle mb-4">
                                    <i class="bi bi-star-fill text-warning me-2"></i> Trabalhos Destacados
                                </h4>
                                <div class="featured-grid">
                                    @foreach (var item in profissional.PortfolioItems.Where(p => p.IsFeatured).Take(3))
                                    {
                                        <div class="featured-work-card">
                                            <div class="featured-work-image">
                                                @if (!string.IsNullOrEmpty(item.ImagemUrl)) {
                                                    <img src="@item.ImagemUrl" 
                                                         class="img-fluid" 
                                                         alt="@item.Titulo"
                                                         loading="lazy">
                                                } else {
                                                    <div class="featured-placeholder">
                                                        <i class="bi bi-image"></i>
                                                    </div>
                                                }
                                                <div class="featured-overlay" onclick="openPortfolioModal(@profissional.PortfolioItems.ToList().IndexOf(item))">
                                                    <button class="btn btn-light">
                                                        <i class="bi bi-zoom-in me-1"></i> Ver Detalhes
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="featured-work-info">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <h5 class="mb-0">@item.Titulo</h5>
                                                    <span class="badge bg-warning">
                                                        <i class="bi bi-star-fill"></i> Destacado
                                                    </span>
                                                </div>
                                                @if (!string.IsNullOrEmpty(item.Descricao)) {
                                                    <p class="featured-description">@item.Descricao</p>
                                                }
                                                <div class="featured-meta">
                                                    <small>
                                                        <i class="bi bi-calendar me-1"></i>
                                                        @item.DataProjeto?.ToString("MMMM yyyy")
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- All Works Grid -->
                        <div class="all-works">
                            <h4 class="section-subtitle mb-4">
                                <i class="bi bi-grid-3x3-gap me-2"></i> Todos os Trabalhos
                            </h4>
                            <div class="works-grid">
                                @foreach (var item in profissional.PortfolioItems.OrderByDescending(p => p.DataProjeto).Take(6))
                                {
                                    <div class="work-card" onclick="openPortfolioModal(@profissional.PortfolioItems.ToList().IndexOf(item))">
                                        <div class="work-image">
                                            @if (!string.IsNullOrEmpty(item.ImagemUrl)) {
                                                <img src="@item.ImagemUrl" 
                                                     class="img-fluid" 
                                                     alt="@item.Titulo"
                                                     loading="lazy">
                                            } else {
                                                <div class="work-placeholder">
                                                    <i class="bi bi-image"></i>
                                                </div>
                                            }
                                            @if (item.IsFeatured) {
                                                <div class="work-badge">
                                                    <i class="bi bi-star-fill"></i>
                                                </div>
                                            }
                                            <div class="work-overlay">
                                                <div class="overlay-content">
                                                    <h6>@item.Titulo</h6>
                                                    <small>@item.DataProjeto?.ToString("MMM yyyy")</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (profissional.PortfolioItems.Count > 6) {
                                <div class="text-center mt-4">
                                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#portfolioModal">
                                        <i class="bi bi-images me-1"></i> Ver todos @profissional.PortfolioItems.Count trabalhos
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </section>
            }

            <!-- Services Section -->
            @if (profissional.ServicosProfissionais?.Any() == true) {
                <section class="profile-section mb-5">
                    <div class="section-header">
                        <h2><i class="bi bi-briefcase me-2"></i> Serviços Oferecidos</h2>
                    </div>
                    <div class="section-content">
                        <div class="services-grid">
                            @foreach (var servico in profissional.ServicosProfissionais)
                            {
                                <div class="service-card">
                                    <div class="service-header">
                                        <h5 class="service-title">@servico.Nome</h5>
                                        <span class="service-price">€@servico.Preco.ToString("F2")</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(servico.Descricao)) {
                                        <p class="service-description">@servico.Descricao</p>
                                    }
                                    <div class="service-footer">
                                        <div class="service-meta">
                                            <i class="bi bi-clock"></i>
                                            <span>Tempo variável</span>
                                        </div>
                                        @if (User.Identity.IsAuthenticated) {
                                            <a asp-controller="Dashboard" asp-action="NovoServico"
                                               asp-route-profissionalId="@profissional.Id"
                                               asp-route-servicoId="@servico.Id"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-file-earmark-text me-1"></i> Solicitar
                                            </a>
                                        } else {
                                            <a asp-controller="Account" asp-action="Login"
                                               asp-route-returnUrl="@Context.Request.Path"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-file-earmark-text me-1"></i> Solicitar
                                            </a>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </section>
            }

            <!-- Reviews Section -->
            @if (profissional.AvaliacoesRecebidas?.Any() == true) {
                <section class="profile-section">
                    <div class="section-header d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi bi-star me-2"></i> Avaliações
                            <span class="badge bg-primary ms-2">@totalAvaliacoes</span>
                        </h2>
                        <div class="average-rating">
                            <span class="rating-number">@avaliacaoMedia.ToString("F1")</span>
                            <span class="rating-max">/5.0</span>
                        </div>
                    </div>
                    <div class="section-content">
                        <!-- Rating Distribution -->
                        @{
                            var ratingDistribution = new Dictionary<int, int>
                            {
                                { 5, 0 }, { 4, 0 }, { 3, 0 }, { 2, 0 }, { 1, 0 }
                            };
                            foreach (var avaliacao in profissional.AvaliacoesRecebidas) {
                                ratingDistribution[avaliacao.Nota]++;
                            }
                        }
                        <div class="rating-distribution mb-5">
                            <h6 class="mb-3">Distribuição de avaliações</h6>
                            @for (int i = 5; i >= 1; i--) {
                                var percent = totalAvaliacoes > 0 ? (ratingDistribution[i] * 100) / totalAvaliacoes : 0;
                                <div class="distribution-row mb-2">
                                    <div class="d-flex align-items-center">
                                        <span class="star-label">@i estrelas</span>
                                        <div class="progress flex-grow-1 mx-3">
                                            <div class="progress-bar bg-warning" style="width: @percent%"></div>
                                        </div>
                                        <span class="count-label">@ratingDistribution[i]</span>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Reviews List -->
                        <div class="reviews-list">
                            @foreach (var avaliacao in profissional.AvaliacoesRecebidas.OrderByDescending(a => a.DataAvaliacao).Take(5)) {
                                <div class="review-item">
                                    <div class="review-header">
                                        <div class="reviewer-info">
                                            <div class="reviewer-avatar">
                                                @if (!string.IsNullOrEmpty(avaliacao.Avaliador?.FotoPerfil)) {
                                                    <img src="@avaliacao.Avaliador.FotoPerfil"
                                                         alt="@avaliacao.Avaliador?.Nome">
                                                } else {
                                                    <div class="avatar-placeholder-sm">
                                                        @(avaliacao.Avaliador?.Nome?.Substring(0, 1).ToUpper() ?? "A")
                                                    </div>
                                                }
                                            </div>
                                            <div class="reviewer-details">
                                                <h6 class="reviewer-name">@avaliacao.Avaliador?.Nome ?? "Utilizador Anónimo"</h6>
                                                <small class="review-date">@avaliacao.DataAvaliacao.ToString("dd/MM/yyyy")</small>
                                            </div>
                                        </div>
                                        <div class="review-rating">
                                            @for (int i = 0; i < 5; i++) {
                                                <i class="bi @(i < avaliacao.Nota ? "bi-star-fill" : "bi-star")"></i>
                                            }
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(avaliacao.Comentario)) {
                                        <div class="review-content">
