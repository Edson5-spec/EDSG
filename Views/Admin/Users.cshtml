@model List<EDSG.Controllers.UserAdminViewModel>
@{
    ViewData["Title"] = "Gerir Utilizadores";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-2">
                <i class="bi bi-people text-primary me-2"></i>Gestão de Utilizadores
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Utilizadores</li>
                </ol>
            </nav>
        </div>
        <div class="col-auto">
            <a asp-action="SystemStats" class="btn btn-outline-info">
                <i class="bi bi-graph-up"></i> Estatísticas
            </a>
        </div>
    </div>

    <!-- Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light py-3">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros e Pesquisa</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-lg-4 col-md-6">
                    <label class="form-label">Pesquisar</label>
                    <input type="text" class="form-control" name="search"
                           placeholder="Nome, email ou localização" value="@ViewBag.Search">
                </div>
                <div class="col-lg-3 col-md-6">
                    <label class="form-label">Tipo de Utilizador</label>
                    <select class="form-select" name="role">
                        <option value="">Todos</option>
                        <option value="professional" selected="@(ViewBag.Role == "professional")">Profissionais</option>
                        <option value="client" selected="@(ViewBag.Role == "client")">Clientes</option>
                    </select>
                </div>
                <div class="col-lg-3 col-md-6">
                    <label class="form-label">Estado da Conta</label>
                    <select class="form-select" name="active">
                        <option value="">Todos</option>
                        <option value="true" selected="@(ViewBag.Active == true)">Ativos</option>
                        <option value="false" selected="@(ViewBag.Active == false)">Inativos</option>
                    </select>
                </div>
                <div class="col-lg-2 col-md-6 d-flex align-items-end">
                    <div class="d-grid gap-2 w-100">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Filtrar
                        </button>
                        <a asp-action="Users" class="btn btn-outline-secondary">Limpar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-primary border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                                Total Utilizadores
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people-fill text-primary fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-success border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                Profissionais
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">
                                @Model.Count(u => !string.IsNullOrEmpty(u.User.Categoria))
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-briefcase-fill text-success fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-warning border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">
                                Administradores
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.Count(u => u.IsAdmin)</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-shield-fill text-warning fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-danger border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-danger text-uppercase mb-1">
                                Contas Inativas
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">
                                @Model.Count(u => !u.User.IsActive)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-person-x-fill text-danger fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-table me-2"></i>Lista de Utilizadores (@Model.Count)
            </h5>
            <div class="dropdown">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button"
                        data-bs-toggle="dropdown">
                    <i class="bi bi-download"></i> Exportar
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-filetype-csv"></i> CSV</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-filetype-pdf"></i> PDF</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-filetype-xlsx"></i> Excel</a></li>
                </ul>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null) {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null) {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th width="25%">
                                <i class="bi bi-person me-1"></i>Utilizador
                            </th>
                            <th width="20%">
                                <i class="bi bi-envelope me-1"></i>Contacto
                            </th>
                            <th width="15%">
                                <i class="bi bi-tags me-1"></i>Tipo
                            </th>
                            <th width="15%">
                                <i class="bi bi-activity me-1"></i>Estado
                            </th>
                            <th width="10%">
                                <i class="bi bi-shield me-1"></i>Admin
                            </th>
                            <th width="15%" class="text-end">
                                <i class="bi bi-gear me-1"></i>Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any()) {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-people display-4"></i>
                                        <p class="mt-3">Nenhum utilizador encontrado</p>
                                    </div>
                                </td>
                            </tr>
                        } else {
                            @foreach (var userVm in Model) {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar me-3">
                                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                                     style="width: 40px; height: 40px;">
                                                    <span class="fw-bold">@userVm.User.Nome.Substring(0, 1)</span>
                                                </div>
                                            </div>
                                            <div>
                                                <strong class="d-block">@userVm.User.Nome</strong>
                                                <small class="text-muted">ID: @userVm.User.Id.Substring(0, 8)...</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="d-flex align-items-center mb-1">
                                                <i class="bi bi-envelope text-muted me-2"></i>
                                                <a href="mailto:@userVm.User.Email" class="text-decoration-none">@userVm.User.Email</a>
                                            </div>
                                            @if (!string.IsNullOrEmpty(userVm.User.PhoneNumber)) {
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-telephone text-muted me-2"></i>
                                                    <small>@userVm.User.PhoneNumber</small>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(userVm.User.Categoria)) {
                                            <div>
                                                <span class="badge bg-success mb-1">
                                                    <i class="bi bi-briefcase me-1"></i>Profissional
                                                </span>
                                                <div class="small text-muted">@userVm.User.Categoria</div>
                                            </div>
                                        } else {
                                            <span class="badge bg-info">
                                                <i class="bi bi-person me-1"></i>Cliente
                                            </span>
                                        }
                                        @if (userVm.User.IsPremium) {
                                            <span class="badge bg-warning mt-1">
                                                <i class="bi bi-star-fill me-1"></i>Premium
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (userVm.User.IsActive) {
                                            <span class="badge bg-success py-2 px-3">
                                                <i class="bi bi-check-circle me-1"></i>Ativo
                                            </span>
                                        } else {
                                            <span class="badge bg-danger py-2 px-3">
                                                <i class="bi bi-x-circle me-1"></i>Inativo
                                            </span>
                                        }
                                        <div class="small text-muted mt-1">
                                            <i class="bi bi-calendar me-1"></i>
                                            @{
                                                var dataRegistro = userVm.User.DataRegistro != DateTime.MinValue ?
                                                userVm.User.DataRegistro.ToString("dd/MM/yyyy") : "N/A";
                                            }
                                            Registo: @dataRegistro
                                        </div>
                                    </td>
                                    <td>
                                        @if (userVm.IsAdmin) {
                                            <span class="badge bg-danger py-2">
                                                <i class="bi bi-shield-check me-1"></i>Admin
                                            </span>
                                        } else {
                                            <span class="badge bg-secondary py-2">Utilizador</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end gap-2">
                                            <a asp-action="ViewUserProfile" asp-route-id="@userVm.User.Id"
                                               class="btn btn-sm btn-outline-primary"
                                               data-bs-toggle="tooltip" title="Ver perfil">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <form asp-action="ToggleUserStatus" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@userVm.User.Id" />
                                                <button type="submit"
                                                        class="btn btn-sm @(userVm.User.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                                        data-bs-toggle="tooltip"
                                                        title="@(userVm.User.IsActive ? "Desativar conta" : "Ativar conta")">
                                                    <i class="bi @(userVm.User.IsActive ? "bi-person-x" : "bi-person-check")"></i>
                                                </button>
                                            </form>
                                            <form asp-action="ToggleAdminRole" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@userVm.User.Id" />
                                                <button type="submit"
                                                        class="btn btn-sm @(userVm.IsAdmin ? "btn-outline-secondary" : "btn-outline-danger")"
                                                        data-bs-toggle="tooltip"
                                                        title="@(userVm.IsAdmin ? "Remover admin" : "Tornar admin")">
                                                    <i class="bi bi-shield @(userVm.IsAdmin ? "" : "text-danger")"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.Count > 0) {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
        <div class="card-footer bg-light py-3">
            <div class="row">
                <div class="col-md-6">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Mostrando @Model.Count utilizadores
                    </small>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">
                        Última atualização: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Confirmação para ações críticas
            $('form[action*="ToggleAdminRole"] button').on('click', function(e) {
                if (!confirm('Tem certeza que deseja alterar os privilégios de administrador deste utilizador?')) {
                    e.preventDefault();
                }
            });

            $('form[action*="ToggleUserStatus"] button').on('click', function(e) {
                const action = $(this).closest('form').find('button').hasClass('btn-outline-warning')
                    ? 'desativar'
                    : 'ativar';
                if (!confirm(`Tem certeza que deseja ${action} esta conta?`)) {
                    e.preventDefault();
                }
            });
        });
    </script>
}