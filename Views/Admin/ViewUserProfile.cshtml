@model EDSG.Models.ApplicationUser
@{
    ViewData["Title"] = $"Perfil - {Model.Nome}";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
    var totalServicesAsClient = ViewBag.TotalServicesAsClient as int? ?? 0;
    var totalServicesAsProfessional = ViewBag.TotalServicesAsProfessional as int? ?? 0;
    var totalProfessionalServices = ViewBag.TotalProfessionalServices as int? ?? 0;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Users">Utilizadores</a></li>
                    <li class="breadcrumb-item active">@Model.Nome</li>
                </ol>
            </nav>
        </div>
        <div class="col-auto">
            <a asp-action="Users" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Voltar
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left Column - User Info -->
        <div class="col-lg-4 col-xl-3">
            <!-- Profile Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <!-- User Avatar -->
                    <div class="avatar mb-3">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto"
                             style="width: 120px; height: 120px; font-size: 3rem;">
                            <span class="fw-bold">@Model.Nome.Substring(0, 1).ToUpper()</span>
                        </div>
                    </div>

                    <!-- User Name -->
                    <h4 class="mb-1">@Model.Nome</h4>
                    <p class="text-muted mb-3">@Model.Email</p>

                    <!-- User Badges -->
                    <div class="mb-4">
                        @if (isAdmin) {
                            <span class="badge bg-danger mb-2 py-2 px-3">
                                <i class="bi bi-shield-check me-1"></i>Administrador
                            </span>
                            <br>
                        }
                        @if (Model.IsPremium) {
                            <span class="badge bg-warning mb-2 py-2 px-3">
                                <i class="bi bi-star-fill me-1"></i>Premium
                            </span>
                            <br>
                        }
                        @if (!string.IsNullOrEmpty(Model.Categoria)) {
                            <span class="badge bg-success mb-2 py-2 px-3">
                                <i class="bi bi-briefcase me-1"></i>Profissional - @Model.Categoria
                            </span>
                            <br>
                        }
                        @if (Model.IsActive) {
                            <span class="badge bg-success py-2 px-3">
                                <i class="bi bi-check-circle me-1"></i>Ativo
                            </span>
                        } else {
                            <span class="badge bg-danger py-2 px-3">
                                <i class="bi bi-x-circle me-1"></i>Inativo
                            </span>
                        }
                    </div>

                    <!-- Quick Stats -->
                    <div class="row text-center mb-4">
                        <div class="col-6">
                            <div class="h5 mb-0 fw-bold text-primary">@totalServicesAsClient</div>
                            <small class="text-muted">Como Cliente</small>
                        </div>
                        <div class="col-6">
                            <div class="h5 mb-0 fw-bold text-success">@totalServicesAsProfessional</div>
                            <small class="text-muted">Como Profissional</small>
                        </div>
                    </div>

                    <!-- Account Actions -->
                    <div class="d-grid gap-2 mb-3">
                        @if (Model.IsActive) {
                            <form asp-action="ToggleUserStatus" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-outline-warning w-100">
                                    <i class="bi bi-person-x me-1"></i> Desativar Conta
                                </button>
                            </form>
                        } else {
                            <form asp-action="ToggleUserStatus" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-outline-success w-100">
                                    <i class="bi bi-person-check me-1"></i> Ativar Conta
                                </button>
                            </form>
                        }

                        @if (isAdmin) {
                            <form asp-action="ToggleAdminRole" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-shield-x me-1"></i> Remover Admin
                                </button>
                            </form>
                        } else {
                            <form asp-action="ToggleAdminRole" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-shield-plus me-1"></i> Tornar Admin
                                </button>
                            </form>
                        }
                    </div>

                    <!-- Send Message Button -->
                    <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#messageModal">
                        <i class="bi bi-envelope me-1"></i> Enviar Mensagem
                    </button>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        ID: @Model.Id.Substring(0, 8)...
                    </small>
                </div>
            </div>

            <!-- Contact Info -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Informações de Contacto</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        @if (!string.IsNullOrEmpty(Model.PhoneNumber)) {
                            <li class="mb-2">
                                <i class="bi bi-telephone text-muted me-2"></i>
                                <strong>Telefone:</strong> @Model.PhoneNumber
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.Localizacao)) {
                            <li class="mb-2">
                                <i class="bi bi-geo-alt text-muted me-2"></i>
                                <strong>Localização:</strong> @Model.Localizacao
                            </li>
                        }
                        <li>
                            <i class="bi bi-calendar text-muted me-2"></i>
                            @{
                                var dataRegistro = Model.DataRegistro != DateTime.MinValue ?
                                Model.DataRegistro.ToString("dd/MM/yyyy") : "N/A";
                            }
                            <strong>Registo:</strong> @dataRegistro
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Right Column - User Activity -->
        <div class="col-lg-8 col-xl-9">
            <!-- Stats Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-start border-primary border-4 shadow-sm h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                                        Serviços Criados
                                    </div>
                                    <div class="h5 mb-0 fw-bold text-gray-800">@totalProfessionalServices</div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-briefcase-fill text-primary fs-1"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-start border-success border-4 shadow-sm h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                        Avaliação Média
                                    </div>
                                    <div class="h5 mb-0 fw-bold text-gray-800">4.8/5</div>
                                    <div class="mt-2">
                                        <i class="bi bi-star-fill text-warning"></i>
                                        <i class="bi bi-star-fill text-warning"></i>
                                        <i class="bi bi-star-fill text-warning"></i>
                                        <i class="bi bi-star-fill text-warning"></i>
                                        <i class="bi bi-star-half text-warning"></i>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-star-fill text-success fs-1"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-start border-warning border-4 shadow-sm h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs fw-bold text-warning text-uppercase mb-1">
                                        Preço Base
                                    </div>
                                    <div class="h5 mb-0 fw-bold text-gray-800">
                                        €@(Model.PrecoBase?.ToString("F2") ?? "0,00")
                                    </div>
                                    <div class="mt-2">
                                        <span class="text-muted small">Por serviço</span>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-currency-euro text-warning fs-1"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-start border-info border-4 shadow-sm h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs fw-bold text-info text-uppercase mb-1">
                                        Tempo na Plataforma
                                    </div>
                                    <div class="h5 mb-0 fw-bold text-gray-800">
                                        @{
                                            var daysSinceRegister = Model.DataRegistro != DateTime.MinValue ?
                                            (DateTime.Now - Model.DataRegistro).Days : 0;
                                        }
                                        @daysSinceRegister dias
                                    </div>
                                    <div class="mt-2">
                                        <span class="text-muted small">Membro desde @(Model.DataRegistro != DateTime.MinValue ? Model.DataRegistro.ToString("MMM yyyy") : "N/A")</span>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-clock-history text-info fs-1"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Services Tabs -->
            <div class="card shadow-sm">
                <div class="card-header bg-white border-0 pt-3">
                    <ul class="nav nav-tabs nav-fill" id="userTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="services-tab" data-bs-toggle="tab"
                                    data-bs-target="#services" type="button" role="tab">
                                <i class="bi bi-briefcase me-2"></i>
                                Serviços (@totalProfessionalServices)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="activity-tab" data-bs-toggle="tab"
                                    data-bs-target="#activity" type="button" role="tab">
                                <i class="bi bi-activity me-2"></i>
                                Atividade Recente
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="history-tab" data-bs-toggle="tab"
                                    data-bs-target="#history" type="button" role="tab">
                                <i class="bi bi-clock-history me-2"></i>
                                Histórico
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="userTabsContent">
                        <!-- Services Tab -->
                        <div class="tab-pane fade show active" id="services" role="tabpanel">
                            @if (Model.ServicosProfissionais?.Any() == true) {
                                <div class="row">
                                    @foreach (var service in Model.ServicosProfissionais.Take(6)) {
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card h-100 border">
                                                <div class="card-body">
                                                    <h6 class="card-title">@service.Nome</h6>
                                                    <p class="card-text small text-muted mb-2">
                                                        @(service.Descricao.Length > 80 ? service.Descricao.Substring(0, 77) + "..." : service.Descricao)
                                                    </p>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="badge @(service.IsAtivo ? "bg-success" : "bg-secondary")">
                                                            @(service.IsAtivo ? "Ativo" : "Inativo")
                                                        </span>
                                                        <span class="text-primary fw-bold">
                                                            €@service.Preco.ToString("F2")
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                @if (Model.ServicosProfissionais.Count > 6) {
                                    <div class="text-center mt-3">
                                        <a asp-action="ServicosProfissionais" asp-route-search="@Model.Email"
                                           class="btn btn-outline-primary">
                                            Ver Todos os @Model.ServicosProfissionais.Count Serviços
                                        </a>
                                    </div>
                                }
                            } else {
                                <div class="text-center py-4">
                                    <i class="bi bi-briefcase display-4 text-muted"></i>
                                    <p class="mt-3">Nenhum serviço profissional criado</p>
                                </div>
                            }
                        </div>

                        <!-- Activity Tab -->
                        <div class="tab-pane fade" id="activity" role="tabpanel">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item d-flex border-0">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-check-circle text-success fs-4"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Serviço Concluído</h6>
                                        <p class="mb-1 small">"Design de Logo" foi concluído com sucesso</p>
                                        <small class="text-muted">Há 2 horas</small>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex border-0">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-chat-left-text text-primary fs-4"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Nova Mensagem</h6>
                                        <p class="mb-1 small">Recebeu uma mensagem sobre um serviço</p>
                                        <small class="text-muted">Há 1 dia</small>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex border-0">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-star-fill text-warning fs-4"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Avaliação Recebida</h6>
                                        <p class="mb-1 small">Recebeu 5 estrelas no serviço "Website Development"</p>
                                        <small class="text-muted">Há 3 dias</small>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex border-0">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-plus-circle text-success fs-4"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Novo Serviço</h6>
                                        <p class="mb-1 small">Criou um novo serviço profissional</p>
                                        <small class="text-muted">Há 1 semana</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- History Tab -->
                        <div class="tab-pane fade" id="history" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Data</th>
                                            <th>Ação</th>
                                            <th>Detalhes</th>
                                            <th>IP</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@DateTime.Now.AddDays(-1).ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>Login</td>
                                            <td>Login bem-sucedido</td>
                                            <td>192.168.1.1</td>
                                        </tr>
                                        <tr>
                                            <td>@DateTime.Now.AddDays(-2).ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>Serviço</td>
                                            <td>Criou novo serviço</td>
                                            <td>192.168.1.1</td>
                                        </tr>
                                        <tr>
                                            <td>@DateTime.Now.AddDays(-3).ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>Perfil</td>
                                            <td>Atualizou informações</td>
                                            <td>192.168.1.1</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Message Modal -->
<div class="modal fade" id="messageModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-envelope me-2"></i>Enviar Mensagem para @Model.Nome
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="SendMessageToUser" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Assunto</label>
                        <input type="text" class="form-control" name="subject"
                               placeholder="Assunto da mensagem" value="Mensagem da Administração">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mensagem *</label>
                        <textarea class="form-control" name="message" rows="6"
                                  placeholder="Escreva a sua mensagem aqui..." required></textarea>
                        <div class="form-text">
                            Esta mensagem será enviada como uma mensagem administrativa.
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="sendCopy" checked>
                            <label class="form-check-label" for="sendCopy">
                                Enviar cópia para o meu email
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send me-1"></i> Enviar Mensagem
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Confirmação para ações
            $('form[action*="ToggleUserStatus"] button').on('click', function(e) {
                const action = $(this).text().includes('Desativar') ? 'desativar' : 'ativar';
                if (!confirm(`Tem certeza que deseja ${action} a conta de ${'@Model.Nome'}?`)) {
                    e.preventDefault();
                }
            });

            $('form[action*="ToggleAdminRole"] button').on('click', function(e) {
                const action = $(this).text().includes('Remover') ? 'remover' : 'conceder';
                if (!confirm(`Tem certeza que deseja ${action} privilégios de administrador a ${'@Model.Nome'}?`)) {
                    e.preventDefault();
                }
            });
        });
    </script>
}