@model List<EDSG.Models.Denuncia>
@{
    ViewData["Title"] = "Gestão de Denúncias";
    var pendingCount = Model.Count(d => d.Estado == EstadoDenuncia.Pendente);
    var underReviewCount = Model.Count(d => d.Estado == EstadoDenuncia.EmAnalise);
    var resolvedCount = Model.Count(d => d.Estado == EstadoDenuncia.Resolvida);
    var dismissedCount = Model.Count(d => d.Estado == EstadoDenuncia.Rejeitada);
}

@functions {
    string GetReportStatusBadgeClass(EstadoDenuncia status) {
        return status switch {
            EstadoDenuncia.Pendente => "bg-warning",
            EstadoDenuncia.EmAnalise => "bg-info",
            EstadoDenuncia.Resolvida => "bg-success",
            EstadoDenuncia.Rejeitada => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    string GetReportStatusIcon(EstadoDenuncia status) {
        return status switch {
            EstadoDenuncia.Pendente => "bi-clock-history",
            EstadoDenuncia.EmAnalise => "bi-search",
            EstadoDenuncia.Resolvida => "bi-check-circle",
            EstadoDenuncia.Rejeitada => "bi-x-circle",
            _ => "bi-question-circle"
        };
    }
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-2">
                <i class="bi bi-flag text-warning me-2"></i>Gestão de Denúncias
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Denúncias</li>
                </ol>
            </nav>
        </div>
        <div class="col-auto">
            @if (pendingCount > 0) {
                <span class="badge bg-danger position-relative">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    @pendingCount Pendentes
                    <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle">
                        <span class="visually-hidden">Novas denúncias</span>
                    </span>
                </span>
            }
        </div>
    </div>

    <!-- Status Tabs -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <ul class="nav nav-tabs nav-fill" id="reportTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(ViewBag.Status == null ? "active" : "")"
                                    id="all-tab" data-bs-toggle="tab" data-bs-target="#all"
                                    type="button" role="tab">
                                <i class="bi bi-list-check me-2"></i>
                                Todas (@Model.Count)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(ViewBag.Status?.ToString() == "0" ? "active" : "")"
                                    id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending"
                                    type="button" role="tab" onclick="filterReports(0)">
                                <i class="bi bi-clock-history me-2"></i>
                                Pendentes (@pendingCount)
                                @if (pendingCount > 0) {
                                    <span class="badge bg-danger ms-1">!</span>
                                }
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(ViewBag.Status?.ToString() == "1" ? "active" : "")"
                                    id="review-tab" data-bs-toggle="tab" data-bs-target="#review"
                                    type="button" role="tab" onclick="filterReports(1)">
                                <i class="bi bi-search me-2"></i>
                                Em Análise (@underReviewCount)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(ViewBag.Status?.ToString() == "2" ? "active" : "")"
                                    id="resolved-tab" data-bs-toggle="tab" data-bs-target="#resolved"
                                    type="button" role="tab" onclick="filterReports(2)">
                                <i class="bi bi-check-circle me-2"></i>
                                Resolvidas (@resolvedCount)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(ViewBag.Status?.ToString() == "3" ? "active" : "")"
                                    id="dismissed-tab" data-bs-toggle="tab" data-bs-target="#dismissed"
                                    type="button" role="tab" onclick="filterReports(3)">
                                <i class="bi bi-x-circle me-2"></i>
                                Rejeitadas (@dismissedCount)
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-warning border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">
                                Pendentes Urgentes
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@pendingCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-exclamation-triangle-fill text-warning fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-info border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">
                                Em Análise
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@underReviewCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-search-heart-fill text-info fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-success border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                Resolvidas (7 dias)
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">
                                @Model.Count(d => d.Estado == EstadoDenuncia.Resolvida &&
                                d.DataResolucao.HasValue &&
                                d.DataResolucao.Value > DateTime.Now.AddDays(-7))
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-check-circle-fill text-success fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-secondary border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-secondary text-uppercase mb-1">
                                Taxa Resolução
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">
                                @(Model.Count > 0 ?
                                                                ((resolvedCount * 100) / Model.Count) : 0)%
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-percent text-secondary fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reports Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-flag-fill me-2"></i>Lista de Denúncias (@Model.Count)
            </h5>
            <div class="d-flex gap-2">
                <button class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#bulkActionModal">
                    <i class="bi bi-gear-wide-connected"></i> Ações em Massa
                </button>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                            data-bs-toggle="dropdown">
                        <i class="bi bi-download"></i> Exportar
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-filetype-csv"></i> CSV</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-filetype-pdf"></i> PDF</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i> Imprimir</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null) {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th width="5%">ID</th>
                            <th width="15%">Denunciante</th>
                            <th width="15%">Denunciado</th>
                            <th width="25%">Descrição</th>
                            <th width="15%">Data/Estado</th>
                            <th width="25%" class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any()) {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-flag display-4"></i>
                                        <p class="mt-3">Nenhuma denúncia encontrada</p>
                                        <p class="small">Todas as denúncias foram processadas!</p>
                                    </div>
                                </td>
                            </tr>
                        } else {
                            @foreach (var report in Model.OrderByDescending(d => d.DataDenuncia)) {
                                <tr class="@(report.Estado == EstadoDenuncia.Pendente ? "table-warning" : "")">
                                    <td>
                                        <span class="badge bg-secondary">#@report.Id</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar me-2">
                                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                                     style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                    <span>@report.Denunciante?.Nome?.Substring(0, 1) ?? "U"</span>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="fw-medium">@report.Denunciante?.Nome</div>
                                                <small class="text-muted">@report.Denunciante?.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (report.Denunciado != null) {
                                            <div class="d-flex align-items-center">
                                                <div class="avatar me-2">
                                                    <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center"
                                                         style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                        <span>@report.Denunciado.Nome?.Substring(0, 1) ?? "U"</span>
                                                    </div>
                                                </div>
                                                <div>
                                                    <div class="fw-medium">@report.Denunciado.Nome</div>
                                                    <small class="text-muted">@report.Denunciado.Email</small>
                                                </div>
                                            </div>
                                        } else {
                                            <span class="badge bg-secondary">Utilizador Removido</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="mb-1">
                                            <strong class="text-danger">Denúncia #@report.Id</strong>
                                        </div>
                                        <div class="text-muted small text-truncate" style="max-width: 300px;">
                                            @report.Descricao
                                        </div>
                                        @if (report.Servico != null) {
                                            <div class="mt-1">
                                                <small class="badge bg-info">
                                                    <i class="bi bi-briefcase me-1"></i>
                                                    Serviço: @report.Servico.Titulo
                                                </small>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div class="mb-2">
                                            <span class="badge @GetReportStatusBadgeClass(report.Estado) py-1 px-2">
                                                <i class="bi @GetReportStatusIcon(report.Estado) me-1"></i>
                                                @report.Estado
                                            </span>
                                        </div>
                                        <div class="small text-muted">
                                            <i class="bi bi-calendar me-1"></i>
                                            @report.DataDenuncia.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                        @if (report.DataResolucao.HasValue) {
                                            <div class="small text-muted">
                                                <i class="bi bi-check-circle me-1"></i>
                                                Resolvido: @report.DataResolucao.Value.ToString("dd/MM/yyyy")
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end gap-2">
                                            <a asp-action="ReportDetails" asp-route-id="@report.Id"
                                               class="btn btn-sm btn-outline-primary"
                                               data-bs-toggle="tooltip" title="Ver detalhes">
                                                <i class="bi bi-eye"></i> Detalhes
                                            </a>

                                            @if (report.Estado == EstadoDenuncia.Pendente) {
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-warning dropdown-toggle"
                                                            type="button" data-bs-toggle="dropdown">
                                                        <i class="bi bi-lightning-charge"></i> Ações
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a class="dropdown-item" href="#"
                                                               onclick="updateReportStatus(@report.Id, 1)">
                                                                <i class="bi bi-search text-info"></i> Em Análise
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="#"
                                                               onclick="updateReportStatus(@report.Id, 2)">
                                                                <i class="bi bi-check-circle text-success"></i> Resolver
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="#"
                                                               onclick="updateReportStatus(@report.Id, 3)">
                                                                <i class="bi bi-x-circle text-danger"></i> Rejeitar
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <a class="dropdown-item text-danger" href="#"
                                                               onclick="showAdminNotesModal(@report.Id)">
                                                                <i class="bi bi-chat-left-text"></i> Notas Admin
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            } else {
                                                <button class="btn btn-sm btn-outline-secondary" disabled>
                                                    <i class="bi bi-check"></i> Processado
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <div class="me-4">
                            <div class="text-muted small">Tempo Médio Resolução</div>
                            <div class="fw-bold h5 mb-0 text-info">
                                @{
                                    var resolvedReports = Model.Where(d => d.DataResolucao.HasValue).ToList();
                                    var avgResolutionHours = resolvedReports.Any() ?
                                    resolvedReports.Average(d => (d.DataResolucao.Value - d.DataDenuncia).TotalHours) : 0;
                                }
                                @Math.Round(avgResolutionHours, 1)h
                            </div>
                        </div>
                        <div>
                            <div class="text-muted small">Prioridade Alta</div>
                            <div class="fw-bold h5 mb-0 text-danger">
                                @Model.Count(d => d.Descricao.Contains("fraude", StringComparison.OrdinalIgnoreCase) ||
                                d.Descricao.Contains("perigo", StringComparison.OrdinalIgnoreCase))
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <nav aria-label="Page navigation" class="d-flex justify-content-end">
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item disabled"><a class="page-link" href="#">Anterior</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Próxima</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Admin Notes -->
<div class="modal fade" id="adminNotesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notas de Administração</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="updateReportForm" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="reportId" name="id" />
                <input type="hidden" id="reportStatus" name="status" value="2" />

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Status da Denúncia</label>
                        <select class="form-select" id="statusSelect" name="status">
                            <option value="1">Em Análise</option>
                            <option value="2" selected>Resolvida</option>
                            <option value="3">Rejeitada</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notas Internas</label>
                        <textarea class="form-control" id="adminNotes" name="adminNotes"
                                  rows="4" placeholder="Adicione notas sobre a resolução desta denúncia..."></textarea>
                        <div class="form-text">Estas notas são visíveis apenas para administradores.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ação Tomada</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="notified" id="actionNotified">
                            <label class="form-check-label" for="actionNotified">
                                Utilizador notificado
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="warned" id="actionWarned">
                            <label class="form-check-label" for="actionWarned">
                                Aviso enviado
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="suspended" id="actionSuspended">
                            <label class="form-check-label" for="actionSuspended">
                                Conta suspensa
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar e Atualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Ativar tab baseada no status da URL
            const urlParams = new URLSearchParams(window.location.search);
            const status = urlParams.get('status');
            if (status) {
                $(`#reportTabs button[onclick*="${status}"]`).tab('show');
            }
        });

        function filterReports(status) {
            window.location.href = `@Url.Action("Reports")?status=${status}`;
        }

        function updateReportStatus(reportId, newStatus) {
            if (confirm('Tem certeza que deseja atualizar o status desta denúncia?')) {
                const form = $('<form>').attr({
                    method: 'POST',
                    action: '@Url.Action("UpdateReportStatus")'
                });

                const token = $('input[name="__RequestVerificationToken"]').val();
                form.append($('<input>').attr({
                    type: 'hidden',
                    name: '__RequestVerificationToken',
                    value: token
                }));

                form.append($('<input>').attr({
                    type: 'hidden',
                    name: 'id',
                    value: reportId
                }));

                form.append($('<input>').attr({
                    type: 'hidden',
                    name: 'status',
                    value: newStatus
                }));

                $('body').append(form);
                form.submit();
            }
        }

        function showAdminNotesModal(reportId) {
            $('#reportId').val(reportId);
            $('#adminNotesModal').modal('show');
        }

        $('#statusSelect').on('change', function() {
            $('#reportStatus').val($(this).val());
        });
    </script>
}