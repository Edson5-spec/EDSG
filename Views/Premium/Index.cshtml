<script>
    // Contadores animados
    document.addEventListener('DOMContentLoaded', function() {
        const counters = document.querySelectorAll('.stat-number');
        counters.forEach(counter => {
            const text = counter.textContent;
            const target = parseFloat(text.replace(/[^\d.]/g, ''));

            if (!isNaN(target)) {
                let current = 0;
                const increment = target / 50;
                const duration = 1000; // 1 segundo
                const steps = 50;
                const stepDuration = duration / steps;

                const updateCounter = () => {
                    if (current < target) {
                        current += increment;
                        if (text.includes('€')) {
                            counter.textContent = '€' + Math.ceil(current).toFixed(2);
                        } else if (text.includes('%')) {
                            counter.textContent = Math.ceil(current) + '%';
                        } else {
                            counter.textContent = Math.ceil(current);
                        }
                        setTimeout(updateCounter, stepDuration);
                    } else {
                        if (text.includes('€')) {
                            counter.textContent = '€' + target.toFixed(2);
                        } else if (text.includes('%')) {
                            counter.textContent = target + '%';
                        } else {
                            counter.textContent = target;
                        }
                    }
                };

                // Inicia quando visível
                const observer = new IntersectionObserver((entries) => {
                    if (entries[0].isIntersecting) {
                        updateCounter();
                        observer.unobserve(counter);
                    }
                }, { threshold: 0.5 });

                observer.observe(counter);
            }
        });

        // Efeito hover
        const hoverElements = document.querySelectorAll('.hover-lift');
        hoverElements.forEach(element => {
            element.addEventListener('mouseenter', function() {
                this.style.transition = 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
            });
        });

        // Remove classes de animação após carregar
        setTimeout(() => {
            const animatedElements = document.querySelectorAll('.fade-in, .fade-in-delay-1, .fade-in-delay-2, .fade-in-delay-3, .fade-in-delay-4, .fade-in-delay-5');
            animatedElements.forEach(el => {
                el.style.animation = 'none';
                el.style.opacity = '1';
                el.style.transform = 'translateY(0)';
            });
        }, 1000);
    });
</script>