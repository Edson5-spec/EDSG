@* Views/Premium/Benefits.cshtml *@
@model EDSG.Controllers.PremiumBenefitsViewModel

@{
    ViewData["Title"] = "Benefícios Premium";
}

<style>
    .mb-5-custom {
        margin-bottom: 3rem !important;
    }

    .hover-lift:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }

    .icon-xl-custom {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        border-radius: 50%;
    }
</style>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary mb-4">@ViewData["Title"]</h1>
        <p class="lead text-muted">Desbloqueie todo o potencial da plataforma</p>
    </div>

    <div class="row mb-5-custom">
        @foreach (var benefit in Model.Benefits) {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm hover-lift">
                    <div class="card-body text-center p-4">
                        @{
                            var bgColor = benefit.Color == "primary" ? "rgba(13, 110, 253, 0.1)" :
                            benefit.Color == "success" ? "rgba(25, 135, 84, 0.1)" :
                            benefit.Color == "warning" ? "rgba(255, 193, 7, 0.1)" :
                            benefit.Color == "danger" ? "rgba(220, 53, 69, 0.1)" :
                            benefit.Color == "info" ? "rgba(13, 202, 240, 0.1)" :
                                                                        "rgba(108, 117, 125, 0.1)";

                            var textColor = benefit.Color == "primary" ? "#0d6efd" :
                            benefit.Color == "success" ? "#198754" :
                            benefit.Color == "warning" ? "#ffc107" :
                            benefit.Color == "danger" ? "#dc3545" :
                            benefit.Color == "info" ? "#0dcaf0" :
                                                                            "#6c757d";
                        }
                        <div class="icon-xl-custom mb-4" style="background-color: @bgColor">
                            <i class="bi @benefit.Icon display-6" style="color: @textColor"></i>
                        </div>
                        <h4 class="card-title fw-bold mb-3">@benefit.Title</h4>
                        <p class="card-text text-muted">@benefit.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mb-5-custom">
        <div class="col-12">
            <h2 class="text-center fw-bold mb-5">Depoimentos</h2>
        </div>

        @foreach (var testimonial in Model.Testimonials) {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-4">
                            @{
                                var avatarBg = testimonial.AvatarColor == "primary" ? "rgba(13, 110, 253, 0.1)" :
                                testimonial.AvatarColor == "success" ? "rgba(25, 135, 84, 0.1)" :
                                testimonial.AvatarColor == "warning" ? "rgba(255, 193, 7, 0.1)" :
                                                                              "rgba(13, 202, 240, 0.1)";

                                var avatarText = testimonial.AvatarColor == "primary" ? "#0d6efd" :
                                testimonial.AvatarColor == "success" ? "#198754" :
                                testimonial.AvatarColor == "warning" ? "#ffc107" :
                                                                                  "#0dcaf0";
                            }
                            <div class="rounded-circle me-3" style="width: 60px; height: 60px; background-color: @avatarBg; display: flex; align-items: center; justify-content: center;">
                                <span class="fs-4 fw-bold" style="color: @avatarText">@testimonial.Name.Substring(0, 1)</span>
                            </div>
                            <div>
                                <h5 class="mb-1">@testimonial.Name</h5>
                                <p class="text-muted small mb-0">@testimonial.Profession</p>
                            </div>
                        </div>

                        <div class="mb-3">
                            @for (int i = 1; i <= 5; i++) {
                                <i class="bi @(i <= testimonial.Rating ? "bi-star-fill" : "bi-star") text-warning"></i>
                            }
                        </div>

                        <p class="card-text fst-italic">"@testimonial.Comment"</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center">
        <a asp-action="Upgrade" class="btn btn-primary btn-lg px-5">
            <i class="bi bi-rocket-takeoff me-2"></i>Começar Agora
        </a>
    </div>
</div>