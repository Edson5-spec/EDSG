@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
    var statusCode = Context.Response.StatusCode;
    var errorMessage = statusCode switch {
        404 => "Página Não Encontrada",
        500 => "Erro Interno do Servidor",
        403 => "Acesso Proibido",
        401 => "Não Autorizado",
        _ => "Ocorreu um Erro"
    };
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <!-- Error Code -->
                    <div class="mb-4">
                        <h1 class="display-1 fw-bold text-danger">@statusCode</h1>
                        <div class="error-code-badge">
                            <span class="badge bg-danger fs-6">ERRO @statusCode</span>
                        </div>
                    </div>

                    <!-- Error Title -->
                    <h2 class="display-5 fw-bold mb-3">@errorMessage</h2>

                    <!-- Error Details -->
                    <div class="alert alert-warning mb-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                            <div>
                                <p class="mb-0">
                                    Lamentamos, mas ocorreu um erro ao processar o seu pedido.
                                    Nossa equipa foi notificada e está a trabalhar para resolver o problema.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Technical Info (Development only) -->
                    @if (Model.ShowRequestId) {
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="bi bi-bug"></i> Informação Técnica</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <strong>ID do Pedido:</strong>
                                    <code class="d-block mt-1 p-2 bg-light rounded">@Model.RequestId</code>
                                </div>
                                @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string)) {
                                    <div>
                                        <strong>Mensagem de Erro:</strong>
                                        <p class="mt-1 p-2 bg-light rounded">@ViewData["ErrorMessage"]</p>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Suggested Actions -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-lightbulb"></i> O Que Pode Fazer?</h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-start">
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex">
                                        <i class="bi bi-arrow-clockwise text-primary me-3 mt-1"></i>
                                        <div>
                                            <h6>Recarregue a Página</h6>
                                            <p class="small text-muted mb-0">Tente atualizar a página (F5)</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex">
                                        <i class="bi bi-house text-success me-3 mt-1"></i>
                                        <div>
                                            <h6>Volte ao Início</h6>
                                            <p class="small text-muted mb-0">Retorne à página principal</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex">
                                        <i class="bi bi-search text-info me-3 mt-1"></i>
                                        <div>
                                            <h6>Use a Busca</h6>
                                            <p class="small text-muted mb-0">Encontre o que procura</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex">
                                        <i class="bi bi-headset text-warning me-3 mt-1"></i>
                                        <div>
                                            <h6>Contacte Suporte</h6>
                                            <p class="small text-muted mb-0">Reporte o problema</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-door"></i> Página Inicial
                        </a>

                        <div class="d-flex flex-wrap justify-content-center gap-2">
                            <button onclick="window.history.back()" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-left"></i> Voltar Atrás
                            </button>

                            <button onclick="window.location.reload()" class="btn btn-outline-success">
                                <i class="bi bi-arrow-clockwise"></i> Recarregar Página
                            </button>

                            <a asp-controller="Home" asp-action="Procurar" class="btn btn-outline-info">
                                <i class="bi bi-search"></i> Procurar Profissionais
                            </a>
                        </div>
                    </div>

                    <!-- Support Information -->
                    <div class="mt-5 pt-4 border-top">
                        <p class="text-muted mb-3">
                            Se o problema persistir, entre em contacto com nossa equipa de suporte:
                        </p>
                        <div class="d-flex flex-wrap justify-content-center gap-3">
                            <a asp-controller="Home" asp-action="Contactos" class="btn btn-outline-danger">
                                <i class="bi bi-envelope"></i> Formulário de Contacto
                            </a>
                            <a href="mailto:support@edsg.com" class="btn btn-outline-danger">
                                <i class="bi bi-headset"></i> support@edsg.com
                            </a>
                            <a href="tel:+351123456789" class="btn btn-outline-danger">
                                <i class="bi bi-telephone"></i> +351 123 456 789
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Error Type Specific Messages -->
            <div class="text-center mt-4">
                @switch (statusCode) {
                    case 404:
                    <div class="alert alert-info">
                        <div class="d-flex">
                            <i class="bi bi-map me-3 mt-1"></i>
                            <div>
                                <h6 class="alert-heading">Página Não Encontrada</h6>
                                <p class="small mb-0">
                                    A página que está a tentar aceder não existe ou foi movida.
                                    Verifique o URL ou use a busca para encontrar o que precisa.
                                </p>
                            </div>
                        </div>
                    </div>
                    break;

                    case 500:
                    <div class="alert alert-danger">
                        <div class="d-flex">
                            <i class="bi bi-server me-3 mt-1"></i>
                            <div>
                                <h6 class="alert-heading">Erro do Servidor</h6>
                                <p class="small mb-0">
                                    Ocorreu um erro interno no servidor. Nossa equipa técnica já foi notificada
                                    e está a trabalhar para resolver o problema o mais rapidamente possível.
                                </p>
                            </div>
                        </div>
                    </div>
                    break;

                    case 403:
                    <div class="alert alert-warning">
                        <div class="d-flex">
                            <i class="bi bi-shield-exclamation me-3 mt-1"></i>
                            <div>
                                <h6 class="alert-heading">Acesso Negado</h6>
                                <p class="small mb-0">
                                    Você não tem permissão para aceder a este recurso.
                                    Pode necessitar de autenticação ou privilégios adicionais.
                                </p>
                            </div>
                        </div>
                    </div>
                    break;
                }
            </div>
        </div>
    </div>
</div>

<style>
    .error-code-badge {
        position: relative;
        margin-top: -20px;
    }

    .card {
        border-radius: 1rem;
    }

    .btn-lg {
        padding: 0.75rem 2rem;
    }

    .display-1 {
        font-size: 8rem;
        line-height: 1;
    }

    @@media (max-width: 768px) {
        .display-1 {
            font-size: 5rem;
        }

        .display-5 {
            font-size: 2rem;
        }
    }
</style>

<script>
    // Auto-refresh after 30 seconds if still on error page
    setTimeout(() => {
        if (window.location.pathname.includes('/Home/Error')) {
            window.location.reload();
        }
    }, 30000);

    // Log error to console for debugging
    console.error('Error @statusCode: @errorMessage');
    @if (Model.ShowRequestId) {
            <text>console.error('Request ID: @Model.RequestId');</text>
    }
</script>