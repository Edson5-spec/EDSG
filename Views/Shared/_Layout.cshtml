        // ========== FUNÇÕES PARA MENSAGENS ==========

        // Função para atualizar contador de mensagens não lidas
        function updateUnreadCount() {
            if ('@User.Identity.IsAuthenticated' !== 'True') return;

            fetch('/Dashboard/GetUnreadCount')
                .then(response => {
                    if (!response.ok) throw new Error('Network response was not ok');
                    return response.json();
                })
                .then(data => {
                    const count = data.count || 0;
                    const sidebarBadge = document.getElementById('sidebarMessageBadge');
                    const headerBadge = document.getElementById('headerMessageBadge');

                    if (count > 0) {
                        if (sidebarBadge) {
                            sidebarBadge.textContent = count;
                            sidebarBadge.style.display = 'inline-block';
                        }
                        if (headerBadge) {
                            headerBadge.textContent = count;
                            headerBadge.style.display = 'inline-block';
                        }
                    } else {
                        if (sidebarBadge) {
                            sidebarBadge.textContent = '';
                            sidebarBadge.style.display = 'none';
                        }
                        if (headerBadge) {
                            headerBadge.textContent = '';
                            headerBadge.style.display = 'none';
                        }
                    }
                })
                .catch(error => console.error('Erro ao carregar contador de mensagens:', error));
        }

        // Atualizar contador a cada 30 segundos
        let unreadCountInterval = setInterval(updateUnreadCount, 30000);

        // ========== FUNÇÕES AUXILIARES ==========

        // Service state helper function
        function getEstadoBadgeClass(estado) {
            switch (estado) {
                case 'Pendente': return 'badge-pendente';
                case 'Aceite': return 'badge-aceite';
                case 'EmProgresso': return 'badge-emprogresso';
                case 'Concluido': return 'badge-concluido';
                case 'Cancelado': return 'badge-cancelado';
                case 'Recusado': return 'badge-secondary';
                default: return 'badge-secondary';
            }
        }

        // Service filter functionality
        const estadoFilter = document.getElementById('estadoFilter');
        if (estadoFilter) {
            estadoFilter.addEventListener('change', function() {
                const estado = this.value;
                const rows = document.querySelectorAll('#servicosTable tbody tr');

                rows.forEach(row => {
                    if (!estado || row.dataset.estado === estado) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }

        // Service sort functionality
        const ordenarPor = document.getElementById('ordenarPor');
        if (ordenarPor) {
            ordenarPor.addEventListener('change', function() {
                const ordem = this.value;
                const tbody = document.querySelector('#servicosTable tbody');
                const rows = Array.from(tbody.querySelectorAll('tr:not([style*="display: none"])'));

                rows.sort((a, b) => {
                    switch (ordem) {
                        case 'dataDesc':
                            return new Date(b.dataset.data) - new Date(a.dataset.data);
                        case 'dataAsc':
                            return new Date(a.dataset.data) - new Date(b.dataset.data);
                        case 'precoDesc':
                            return parseFloat(b.dataset.preco) - parseFloat(a.dataset.preco);
                        case 'precoAsc':
                            return parseFloat(a.dataset.preco) - parseFloat(b.dataset.preco);
                        case 'titulo':
                            return a.dataset.titulo.localeCompare(b.dataset.titulo);
                        default:
                            return 0;
                    }
                });

                // Reorder rows
                rows.forEach(row => tbody.appendChild(row));
            });
        }

        // Função para o botão "Procurar Profissionais" na Home Page
        function goToProcurar() {
            window.location.href = '@Url.Action("Procurar", "Home")';
        }

        // Função para confirmar ações (aceitar, recusar, cancelar serviços)
        function confirmAction(message) {
            return confirm(message || '@(isPortuguese ? "Tem a certeza que pretende realizar esta ação?" : "Are you sure you want to perform this action?")');
        }

        // Função para abrir modal de cancelamento
        function openCancelModal(servicoId, servicoTitulo) {
            const modal = new bootstrap.Modal(document.getElementById('cancelarModal'));
            document.getElementById('servicoId').value = servicoId;
            document.getElementById('servicoTitulo').textContent = servicoTitulo;
            modal.show();
        }

        // ========== INICIALIZAÇÃO ==========

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Add fade-in animation to main content
            const mainContent = document.querySelector('main');
            if (mainContent) {
                mainContent.classList.add('fade-in');
            }

            // Carregar contador de mensagens não lidas
            updateUnreadCount();

            // Handle mobile menu
            const mobileMenuToggle = document.createElement('button');
            mobileMenuToggle.className = 'btn btn-primary d-lg-none ms-2';
            mobileMenuToggle.innerHTML = '<i class="bi bi-list"></i>';
            mobileMenuToggle.style.padding = '6px 12px';
            mobileMenuToggle.addEventListener('click', function() {
                document.querySelector('.main-nav').classList.toggle('d-flex');
            });

            // Add to navbar if on mobile
            if (window.innerWidth < 992) {
                const userMenu = document.querySelector('.user-menu');
                userMenu.parentNode.insertBefore(mobileMenuToggle, userMenu);
            }

            // Add loading states to buttons
            document.querySelectorAll('form').forEach(form => {
                form.addEventListener('submit', function() {
                    const submitButton = this.querySelector('button[type="submit"]');
                    if (submitButton) {
                        submitButton.disabled = true;
                        const originalHTML = submitButton.innerHTML;
                        submitButton.innerHTML = '<span class="loading-spinner me-2"></span> Processando...';

                        // Reset after 5 seconds (in case of error)
                        setTimeout(() => {
                            submitButton.disabled = false;
                            submitButton.innerHTML = originalHTML;
                        }, 5000);
                    }
                });
            });

            // Inicializar tooltips do Bootstrap
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        // Handle window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 992) {
                document.querySelector('.main-nav').style.display = 'flex';
            } else {
                document.querySelector('.main-nav').style.display = 'none';
            }
        });

        // ========== CLEANUP ==========

        // Limpar intervalos quando a página for fechada
        window.addEventListener('beforeunload', function() {
            if (unreadCountInterval) {
                clearInterval(unreadCountInterval);
            }
        });

    </script>

