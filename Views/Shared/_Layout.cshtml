        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
        }

        .btn-icon {
            width: 40px;
            height: 40px;
            padding: 0;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* ========== FORM CONTROLS MELHORADOS ========== */
        .form-control {
            background: var(--color-bg-surface);
            border: 2px solid var(--color-border);
            border-radius: var(--border-radius);
            color: var(--color-text-primary);
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all var(--transition);
            line-height: 1.5;
        }

            .form-control:focus {
                background: var(--color-bg-primary);
                border-color: var(--color-primary);
                box-shadow: 0 0 0 3px rgba(var(--color-primary-rgb), 0.15);
                color: var(--color-text-primary);
            }

        .form-label {
            color: var(--color-text-primary);
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-text {
            color: var(--color-text-tertiary);
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        /* ========== TABLES MELHORADAS ========== */
        .table {
            color: var(--color-text-primary);
            background: var(--color-bg-surface);
            border-collapse: separate;
            border-spacing: 0;
            border-radius: var(--border-radius);
            overflow: hidden;
            border: 1px solid var(--color-border);
        }

            .table thead th {
                background: var(--color-bg-secondary);
                color: var(--color-text-primary);
                font-weight: 600;
                border-bottom: 2px solid var(--color-border);
                padding: 1rem;
            }

            .table tbody td {
                padding: 1rem;
                border-bottom: 1px solid var(--color-border-light);
                vertical-align: middle;
            }

            .table tbody tr:hover {
                background: var(--color-bg-tertiary);
            }

            .table tbody tr:last-child td {
                border-bottom: none;
            }

        /* ========== BADGES ========== */
        .badge {
            font-family: var(--font-family-base);
            font-weight: 600;
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
            border-radius: var(--border-radius);
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            line-height: 1;
        }

        .badge-primary {
            background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
            color: white;
        }

        .badge-success {
            background: linear-gradient(135deg, var(--color-success), #0f5132);
            color: white;
        }

        .badge-warning {
            background: linear-gradient(135deg, var(--color-warning), #664d03);
            color: #212529;
        }

        .badge-danger {
            background: linear-gradient(135deg, var(--color-danger), #842029);
            color: white;
        }

        .badge-info {
            background: linear-gradient(135deg, var(--color-info), #055160);
            color: white;
        }

        .badge-estado {
            font-size: 0.75rem;
            font-weight: 600;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            text-transform: uppercase;
            letter-spacing: 0.02em;
        }

        .badge-pendente {
            background: linear-gradient(135deg, #ffc107, #e0a800);
            color: #212529;
        }

        .badge-aceite {
            background: linear-gradient(135deg, #0d6efd, #0a58ca);
            color: white;
        }

        .badge-emprogresso {
            background: linear-gradient(135deg, #0dcaf0, #0aa2c0);
            color: white;
        }

        .badge-concluido {
            background: linear-gradient(135deg, #198754, #13653f);
            color: white;
        }

        .badge-cancelado {
            background: linear-gradient(135deg, #dc3545, #b02a37);
            color: white;
        }

        /* ========== FOOTER SIMPLES - MESMA COR PARA AMBOS OS TEMAS ========== */
        .site-footer {
            background: #1e293b; /* Cor fixa do modo escuro */
            color: #f1f5f9;
            padding: 0.75rem 0; /* REDUZIDO pela metade */
