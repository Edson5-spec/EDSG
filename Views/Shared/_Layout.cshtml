        .footer-container {
            max-width: var(--max-content-width);
            margin: 0 auto;
            padding: 0 2rem;
        }

        .footer-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            gap: 0.5rem; /* REDUZIDO */
        }

        .footer-logo {
            display: flex;
            align-items: center;
            gap: 0.375rem; /* REDUZIDO */
            color: white;
            font-size: 0.95rem; /* REDUZIDO */
            font-weight: 700;
            text-decoration: none;
            margin-bottom: 0.25rem; /* REDUZIDO */
        }

            .footer-logo:hover {
                color: #60a5fa;
            }

        .footer-description {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.75rem; /* REDUZIDO */
            max-width: 400px; /* REDUZIDO */
            line-height: 1.4; /* REDUZIDO */
            margin-bottom: 0.5rem; /* REDUZIDO */
        }

        .footer-links {
            display: flex;
            gap: 1rem; /* REDUZIDO */
            margin-bottom: 0.5rem; /* REDUZIDO */
            flex-wrap: wrap;
            justify-content: center;
        }

            .footer-links a {
                color: rgba(255, 255, 255, 0.8);
                text-decoration: none;
                font-size: 0.8rem; /* REDUZIDO */
                transition: all var(--transition-fast);
                padding: 0.125rem 0; /* REDUZIDO */
                position: relative;
            }

                .footer-links a:hover {
                    color: #60a5fa;
                }

                .footer-links a::after {
                    content: '';
                    position: absolute;
                    bottom: -1px; /* REDUZIDO */
                    left: 0;
                    width: 0;
                    height: 1px;
                    background: #60a5fa;
                    transition: width var(--transition);
                }

                .footer-links a:hover::after {
                    width: 100%;
                }

        .footer-contact {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.75rem; /* REDUZIDO */
            margin-bottom: 0.5rem; /* REDUZIDO */
        }

            .footer-contact p {
                margin-bottom: 0.25rem; /* REDUZIDO */
                display: flex;
                align-items: center;
                gap: 0.375rem; /* REDUZIDO */
                justify-content: center;
            }

            .footer-contact i {
                color: #60a5fa;
                font-size: 0.8rem; /* REDUZIDO */
            }

        .footer-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding-top: 0.5rem; /* REDUZIDO */
            margin-top: 0.5rem; /* REDUZIDO */
            width: 100%;
        }

            .footer-bottom p {
                color: rgba(255, 255, 255, 0.6);
                font-size: 0.7rem; /* REDUZIDO */
                margin-bottom: 0.125rem; /* REDUZIDO */
            }

        /* ========== CUSTOM SCROLLBAR IMPROVED ========== */
        ::-webkit-scrollbar {
            width: 12px;
            height: 12px;
        }

        ::-webkit-scrollbar-track {
            background: var(--color-bg-secondary);
            border-radius: 6px;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--color-border-dark);
            border-radius: 6px;
            border: 2px solid var(--color-bg-secondary);
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--color-text-tertiary);
            }

        ::-webkit-scrollbar-corner {
            background: var(--color-bg-secondary);
        }

        /* ========== RESPONSIVE DESIGN MELHORADO ========== */
        @@media (max-width: 1400px) {
            .container, .container-fluid {
                padding: 0 1.75rem;
            }

            .content-wrapper {
                padding: 0 1.75rem;
            }
        }

        @@media (max-width: 1200px) {
            :root {
                --max-content-width: 100%;
            }

            .container, .container-fluid {
                padding: 0 1.5rem;
            }

            .content-wrapper {
                padding: 0 1.5rem;
            }

            h1 {
                font-size: 2rem;
            }

            h2 {
                font-size: 1.75rem;
            }
        }

        @@media (max-width: 992px) {
            .main-nav {
                display: none !important;
            }

            .search-container {
                display: none;
            }

            .github-sidebar.active + main {
                margin-left: 0;
            }

            .content-wrapper {
                padding: 1rem;
            }

            main {
                padding: 1rem 0;
            }

            .container, .container-fluid {
                padding: 0 1.25rem;
            }

            .footer-container {
                padding: 0 1.25rem;
            }
        }

        @@media (max-width: 768px) {
            .container, .container-fluid {
                padding: 0 1rem;
            }

            .footer-container {
                padding: 0 1rem;
            }

            .site-footer {
                padding: 0.625rem 0; /* REDUZIDO */
            }

            .footer-links {
                gap: 0.75rem; /* REDUZIDO */
            }

                .footer-links a {
                    font-size: 0.75rem; /* REDUZIDO */
                }

            .footer-description {
                font-size: 0.7rem; /* REDUZIDO */
                max-width: 300px; /* REDUZIDO */
            }

            h1 {
                font-size: 1.75rem;
            }

            h2 {
                font-size: 1.5rem;
            }

            h3 {
                font-size: 1.25rem;
            }

            main {
                padding: 1rem 0;
            }
        }

        @@media (max-width: 576px) {
            html {
                font-size: 14px;
            }

            .user-name {
                display: none;
            }

            .container, .container-fluid {
                padding: 0 0.75rem;
            }

            .footer-container {
                padding: 0 0.75rem;
            }

            .footer-links {
                flex-direction: column;
                gap: 0.5rem; /* REDUZIDO */
            }

            .content-wrapper {
                padding: 0 0.75rem;
            }

            .content-panel {
                padding: 1.25rem;
            }

            .site-footer {
                padding: 0.5rem 0; /* REDUZIDO */
            }
        }

        /* ========== PRINT STYLES ========== */
        @@media print {
            .navbar,
            .github-sidebar,
            .site-footer,
            .btn {
                display: none !important;
            }

            body {
                padding-top: 0;
            }

            main {
                min-height: auto;
                padding: 0;
            }

            .card {
                box-shadow: none;
                border: 1px solid #ddd;
            }
        }

        /* ========== CORREÇÕES ESPECÍFICAS PARA LEGIBILIDADE ========== */

        /* Melhorar contraste geral para modo claro */
        [data-theme="light"] {
            --color-text-primary: #0f172a; /* Mais escuro para melhor contraste */
            --color-text-secondary: #334155;
            --color-text-tertiary: #64748b;
        }

        /* Melhorar contraste para modo escuro */
        [data-theme="dark"] {
            --color-text-primary: #f1f5f9; /* Mais claro */
            --color-text-secondary: #cbd5e1;
            --color-text-tertiary: #94a3b8;
        }

        /* Correções específicas para cards e painéis */
        [data-theme="light"] .card,
        [data-theme="light"] .content-panel {
            border-color: #e2e8f0;
            background: white;
        }

        [data-theme="dark"] .card,
        [data-theme="dark"] .content-panel {
            border-color: #475569;
            background: #1e293b;
        }

        /* Correções para tabelas */
        [data-theme="light"] .table {
            background: white;
        }

        [data-theme="dark"] .table {
            background: #1e293b;
        }

        /* Correções para formulários */
        [data-theme="light"] .form-control {
            background: white;
            border-color: #e2e8f0;
            color: #0f172a;
        }

        [data-theme="dark"] .form-control {
            background: #334155;
            border-color: #475569;
            color: #f1f5f9;
        }

        /* Correções para badges */
        [data-theme="light"] .badge {
            color: white !important;
        }

        /* ========== ESTILOS ESPECÍFICOS PARA REMOVER ESPAÇO BRANCO ========== */
        .compact-section {
            margin-top: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .no-padding-top {
            padding-top: 0 !important;
        }

        .no-padding-bottom {
            padding-bottom: 0 !important;
        }

        .no-margin-top {
            margin-top: 0 !important;
        }

        .no-margin-bottom {
            margin-bottom: 0 !important;
        }

        /* ========== MENSAGENS - Mantendo os estilos originais ========== */
        .message-bubble {
            max-width: 70%;
            margin-bottom: 10px;
            padding: 10px 15px;
            border-radius: 18px;
            word-wrap: break-word;
            background: var(--color-bg-tertiary);
            color: var(--color-text-primary);
        }

        .message-sent {
            background: var(--color-primary);
            color: white;
            margin-left: auto;
            border-bottom-right-radius: 4px;
        }

        .message-received {
            background: var(--color-bg-tertiary);
            color: var(--color-text-primary);
            margin-right: auto;
            border-bottom-left-radius: 4px;
        }

        .message-time {
            font-size: 0.75rem;
            color: var(--color-text-tertiary);
            margin-top: 5px;
            text-align: right;
        }

        .message-sent .message-time {
            color: rgba(255, 255, 255, 0.8);
        }

        /* ========== SERVICE CARD STYLES ========== */
        .service-card {
            border: 1px solid var(--color-border);
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 16px;
            transition: all 0.2s;
            background: var(--color-bg-surface);
        }

            .service-card:hover {
                border-color: var(--color-primary-light);
                box-shadow: var(--shadow);
            }

        /* ========== TIMELINE ========== */
        .timeline {
            position: relative;
            padding-left: 30px;
        }

            .timeline::before {
                content: '';
                position: absolute;
                left: 11px;
                top: 0;
                bottom: 0;
                width: 2px;
                background-color: var(--color-border);
            }

        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }

        .timeline-icon {
            position: absolute;
            left: -30px;
            top: 0;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            background-color: var(--color-border);
            border: 2px solid var(--color-bg-surface);
        }

        .timeline-item.completed .timeline-icon {
            background-color: var(--color-success);
        }

        .timeline-item.active .timeline-icon {
            background-color: var(--color-primary);
            animation: pulseAnimation 2s infinite;
        }

        @@keyframes pulseAnimation {
            0% {
                box-shadow: 0 0 0 0 rgba(var(--color-primary-rgb), 0.7);
            }

            70% {
                box-shadow: 0 0 0 10px rgba(var(--color-primary-rgb), 0);
            }

            100% {
                box-shadow: 0 0 0 0 rgba(var(--color-primary-rgb), 0);
            }
        }

        /* ========== DASHBOARD STATS CARDS ========== */
        .stat-card {
            border: none;
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.2s;
            background: var(--color-bg-surface);
        }

            .stat-card:hover {
                transform: translateY(-2px);
            }

        .stat-card-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .stat-card-success {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
        }

        .stat-card-warning {
            background: linear-gradient(135deg, #f7971e 0%, #ffd200 100%);
            color: white;
        }

        .stat-card-info {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }

        .stat-card-danger {
            background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
            color: white;
        }

        /* ========== LOADING SPINNER ========== */
        .loading-spinner {
            display: inline-block;
            width: 1rem;
            height: 1rem;
            border: 2px solid var(--color-border);
            border-top: 2px solid var(--color-primary);
            border-radius: 50%;
            animation: spinAnimation 1s linear infinite;
        }

        @@keyframes spinAnimation {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* ========== ANIMAÇÕES ADICIONAIS ========== */
        @@keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-30px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .fade-in {
            animation: fadeIn 0.5s ease-out;
        }

        .slide-in-right {
            animation: slideInRight 0.4s ease-out;
        }

        .slide-in-left {
            animation: slideInLeft 0.4s ease-out;
        }

        /* ========== FOCUS STYLES ========== */
        :focus-visible {
            outline: 2px solid var(--color-primary);
            outline-offset: 2px;
            border-radius: var(--border-radius-sm);
        }

        /* ========== SELECTION STYLES ========== */
        ::selection {
            background: rgba(var(--color-primary-rgb), 0.2);
            color: var(--color-text-primary);
        }

        /* ========== PLACEHOLDER STYLES ========== */
        ::placeholder {
            color: var(--color-text-tertiary);
            opacity: 0.7;
        }

        /* ========== DISABLED STATE ========== */
        :disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
    </style>
</head>
<body>
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

    <!-- GitHub-like Sidebar -->
    <aside class="github-sidebar" id="githubSidebar">
        <!-- User Profile -->
        <div class="sidebar-section">
            <div class="d-flex align-items-center mb-3 px-3">
                <div class="user-avatar me-3">
                    @if (!string.IsNullOrEmpty(user?.Nome)) {
                        <span>@user.Nome.Substring(0, 1).ToUpper()</span>
                    } else {
                        <i class="bi bi-person"></i>
                    }
                </div>
                <div>
                    <div class="fw-bold">@user?.Nome</div>
                    <div class="text-muted small">@user?.Email</div>
                    @if (user != null) {
                        <div class="mt-1">
                            <span class="badge @(isProfissional ? "badge-primary" : "badge-info")">
                                @(isProfissional ? "Profissional" : "Cliente")
                            </span>
                            @if (user.IsPremium) {
                                <span class="badge badge-warning ms-1">
                                    <i class="bi bi-star-fill"></i> Premium
                                </span>
                            }
                            @if (await UserManager.IsInRoleAsync(user, "Admin")) {
                                <span class="badge badge-danger ms-1">
                                    <i class="bi bi-shield-check"></i> Admin
                                </span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <div class="sidebar-section">
            <div class="sidebar-title">Navegação</div>
            <a class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
               asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door"></i> Início
            </a>
            <a class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Procurar" ? "active" : "")"
               asp-controller="Home" asp-action="Procurar">
                <i class="bi bi-search"></i> Procurar
            </a>
            <a class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Sobre" ? "active" : "")"
               asp-controller="Home" asp-action="Sobre">
                <i class="bi bi-info-circle"></i> Sobre
            </a>
            <a class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Contactos" ? "active" : "")"
               asp-controller="Home" asp-action="Contactos">
                <i class="bi bi-envelope"></i> Contactos
            </a>
        </div>

        <!-- Dashboard -->
        @if (User.Identity.IsAuthenticated) {
            <div class="sidebar-section">
                <div class="sidebar-title">Dashboard</div>
                <a class="sidebar-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                   asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
                <a class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Mensagens" ? "active" : "")"
                   asp-controller="Dashboard" asp-action="Mensagens">
                    <i class="bi bi-chat-dots"></i> Mensagens
                    <span class="sidebar-badge" id="sidebarMessageBadge"></span>
                </a>
                <a class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Favoritos" ? "active" : "")"
                   asp-controller="Dashboard" asp-action="Favoritos">
                    <i class="bi bi-heart"></i> Favoritos
                </a>
                <a class="sidebar-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Servicos" ? "active" : "")"
                   asp-controller="Dashboard" asp-action="Servicos">
                    <i class="bi bi-briefcase"></i> Serviços
                </a>
                @if (isProfissional) {
                    <a class="sidebar-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ServicosProfissionais" ? "active" : "")"
                       asp-controller="ServicosProfissionais" asp-action="Index">
                        <i class="bi bi-tools"></i> Meus Serviços Profissionais
                    </a>
                }
                <!-- Dashboard Mode Toggle -->
                <form asp-controller="Dashboard" asp-action="SwitchMode" method="post" id="modeToggleForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="mode" value="@(isProfissional ? "Cliente" : "Profissional")" />
                    <button type="submit" class="sidebar-item w-100 text-start bg-transparent border-0">
                        <i class="bi bi-arrow-repeat"></i>
                        Modo @(isProfissional ? "Cliente" : "Profissional")
                    </button>
                </form>
            </div>

            <!-- Perfil -->
