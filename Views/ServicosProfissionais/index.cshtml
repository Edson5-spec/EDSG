@model IEnumerable<EDSG.Models.ServicoProfissional>

@{
    ViewData["Title"] = "Meus Serviços";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null) {
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar Novo Serviço</a>
</p>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Preço (€)</th>
            <th>Tempo Estimado</th>
            <th>Ativo</th>
            <th>Data Criação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any()) {
            foreach (var item in Model) {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Categoria</td>
                    <td>@item.Preco.ToString("F2")</td>
                    <td>@item.TempoEstimado</td>
                    <td>
                        @if (item.IsAtivo) {
                            <span class="badge bg-success">Ativo</span>
                        } else {
                            <span class="badge bg-secondary">Inativo</span>
                        }
                    </td>
                    <td>@item.DataCriacao.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>

                        @if (item.IsAtivo) {
                            <form asp-action="Desativar" asp-route-id="@item.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-secondary">Desativar</button>
                            </form>
                        } else {
                            <form asp-action="Ativar" asp-route-id="@item.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-success">Ativar</button>
                            </form>
                        }

                        <form asp-action="Remover" asp-route-id="@item.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Tem a certeza que quer remover este serviço?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Remover</button>
                        </form>
                    </td>
                </tr>
            }
        } else {
            <tr>
                <td colspan="7" class="text-center">Não existem serviços registados.</td>
            </tr>
        }
    </tbody>
</table>
