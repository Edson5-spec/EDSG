@{
    ViewData["Title"] = "Nova Conversa";
    var usuarios = ViewBag.Usuarios as List<dynamic>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2><i class="bi bi-plus-circle me-2"></i> Nova Conversa</h2>
            <p class="text-muted">Selecione um usuário para iniciar uma conversa</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">Selecione um destinatário</h5>
                </div>
                <div class="card-body">
                    @if (usuarios != null && usuarios.Any()) {
                        <div class="list-group">
                            @foreach (var usuario in usuarios) {
                                <a href="@Url.Action("Mensagens", "Dashboard", new { id = usuario.Id })"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(usuario.FotoPerfil)) {
                                            <img src="@usuario.FotoPerfil"
                                                 class="rounded-circle me-3"
                                                 style="width: 50px; height: 50px; object-fit: cover;"
                                                 alt="@usuario.Nome">
                                        } else {
                                            <div class="rounded-circle bg-primary me-3 d-flex align-items-center justify-content-center"
                                                 style="width: 50px; height: 50px; color: white;">
                                                <i class="bi bi-person" style="font-size: 1.5rem;"></i>
                                            </div>
                                        }
                                        <div>
                                            <h6 class="mb-0">@usuario.Nome</h6>
                                            @if (!string.IsNullOrEmpty(usuario.Categoria)) {
                                                <small class="text-muted">@usuario.Categoria</small>
                                            }
                                        </div>
                                        <div class="ms-auto">
                                            <i class="bi bi-chevron-right text-muted"></i>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    } else {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="bi bi-people display-1 text-muted"></i>
                            </div>
                            <h5>Nenhum usuário encontrado</h5>
                            <p class="text-muted">Não há outros usuários disponíveis para conversar</p>
                            <a asp-action="Mensagens" class="btn btn-primary">
                                <i class="bi bi-arrow-left me-2"></i> Voltar às Mensagens
                            </a>
                        </div>
                    }
                </div>
                <div class="card-footer bg-white border-top">
                    <a asp-action="Mensagens" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i> Voltar às Mensagens
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>