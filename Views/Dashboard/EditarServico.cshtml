@model EDSG.Models.EditarServicoViewModel
@{
    ViewData["Title"] = "Editar Serviço";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-pencil"></i> Editar Serviço</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Dashboard" asp-action="EditarServico" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label">Título do Serviço *</label>
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label">Descrição Detalhada *</label>
                            <textarea asp-for="Descricao" class="form-control" rows="5"
                                      placeholder="Descreva em detalhe o que precisa..."></textarea>
                            <div class="form-text">Descreva o serviço com o máximo de detalhes possível.</div>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Categoria" class="form-label">Categoria</label>
                                <input asp-for="Categoria" class="form-control" />
                                <span asp-validation-for="Categoria" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Localizacao" class="form-label">Localização</label>
                                <input asp-for="Localizacao" class="form-control"
                                       placeholder="Ex: Lisboa, Portugal" />
                                <span asp-validation-for="Localizacao" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PrecoAcordado" class="form-label">Preço Acordado (€) *</label>
                            <input asp-for="PrecoAcordado" class="form-control" type="number" step="0.01" min="0" max="10000" />
                            <div class="form-text">Valor acordado para o serviço.</div>
                            <span asp-validation-for="PrecoAcordado" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Dashboard" asp-action="DetalhesServico" asp-route-id="@Model.Id"
                               class="btn btn-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Guardar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>