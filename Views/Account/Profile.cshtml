                displayPortfolio();
            } catch (error) {
                console.error('Erro ao carregar portfólio:', error);
                showToast('Erro ao carregar portfólio', 'danger');
            }
        }

        function displayPortfolio() {
            const portfolioItems = document.getElementById('portfolioItems');
            const portfolioCount = document.getElementById('portfolioCount');
            const emptyPortfolio = document.getElementById('emptyPortfolio');
            
            if (!portfolioData || portfolioData.length === 0) {
                portfolioItems.innerHTML = '';
                portfolioCount.textContent = '0';
                emptyPortfolio.style.display = 'block';
                return;
            }
            
            emptyPortfolio.style.display = 'none';
            portfolioCount.textContent = portfolioData.length;
            
            // Sort based on current selection
            const sortBy = document.getElementById('sortPortfolio')?.value || 'featured';
            let sortedData = [...portfolioData];
            
            switch(sortBy) {
                case 'featured':
                    sortedData.sort((a, b) => {
                        if (a.isFeatured && !b.isFeatured) return -1;
                        if (!a.isFeatured && b.isFeatured) return 1;
                        return new Date(b.createdAt) - new Date(a.createdAt);
                    });
                    break;
                case 'recent':
                    sortedData.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
                    break;
                case 'oldest':
                    sortedData.sort((a, b) => new Date(a.createdAt) - new Date(b.createdAt));
                    break;
                case 'title':
                    sortedData.sort((a, b) => a.title.localeCompare(b.title));
                    break;
            }
            
            let portfolioHTML = '';
            
            sortedData.forEach(item => {
                const date = item.date ? new Date(item.date).toLocaleDateString('pt-PT', {
                    day: '2-digit',
                    month: 'short',
                    year: 'numeric'
                }) : 'Sem data';
                
                portfolioHTML += `
                    <div class="col-md-6 col-lg-4" data-portfolio-id="${item.id}">
                        <div class="portfolio-item-card card h-100">
                            <div class="portfolio-item-image position-relative">
                                <img src="${item.imageUrl}" 
                                     class="img-fluid w-100" 
                                     alt="${item.title}"
                                     style="height: 200px; object-fit: cover;"
                                     onclick="viewPortfolioItem(${item.id})">
                                ${item.isFeatured ? `
                                    <div class="featured-badge">
                                        <i class="bi bi-star-fill"></i> Destacado
                                    </div>
                                ` : ''}
                                <div class="portfolio-item-overlay" onclick="viewPortfolioItem(${item.id})">
                                    <button class="btn btn-light btn-sm">
                                        <i class="bi bi-zoom-in me-1"></i> Ver
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title mb-2">${item.title}</h6>
                                <p class="card-text small text-muted mb-3 line-clamp-2">${item.description}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar me-1"></i> ${date}
                                    </small>
                                    <div class="portfolio-item-actions">
                                        <button class="btn btn-sm btn-outline-primary me-1" 
                                                onclick="editPortfolioItem(${item.id})" 
                                                title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" 
                                                onclick="deletePortfolioItem(${item.id})" 
                                                title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            portfolioItems.innerHTML = portfolioHTML;
        }

        function sortPortfolio() {
            displayPortfolio();
        }

        // Portfolio Preview
        function previewPortfolioImage(input) {
            const preview = document.getElementById('portfolioPreview');
            const previewContainer = document.getElementById('portfolioImagePreview');
            
            if (input.files && input.files[0]) {
                const file = input.files[0];
                
                // Validate file size (10MB)
                if (file.size > 10 * 1024 * 1024) {
                    showToast('A imagem é muito grande. Máximo: 10MB', 'danger');
                    input.value = '';
                    return;
                }
                
                // Validate format
                const validFormats = ['jpg', 'jpeg', 'png', 'gif'];
                const extension = file.name.split('.').pop().toLowerCase();
                if (!validFormats.includes(extension)) {
                    showToast('Formato não suportado. Use JPG, PNG ou GIF', 'danger');
                    input.value = '';
                    return;
                }
                
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.style.display = 'block';
                }
                
                reader.readAsDataURL(file);
            }
        }

        function removePortfolioPreview() {
            document.getElementById('portfolioFile').value = '';
            document.getElementById('portfolioImagePreview').style.display = 'none';
        }

        // Portfolio Form Submission
        document.getElementById('uploadPortfolioForm')?.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const form = e.target;
            const formData = new FormData(form);
            const fileInput = document.getElementById('portfolioFile');
            
            if (!fileInput.files[0]) {
                showToast('Selecione uma imagem para o portfólio', 'warning');
                return;
            }
            
            // Show loading state
            const submitBtn = form.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> A carregar...';
            
            try {
                // Simulate API call - replace with real API
                await new Promise(resolve => setTimeout(resolve, 1500));
                
                const newItem = {
                    id: portfolioData.length > 0 ? Math.max(...portfolioData.map(i => i.id)) + 1 : 1,
                    title: formData.get('portfolioTitle'),
                    description: formData.get('portfolioDescription'),
                    imageUrl: URL.createObjectURL(fileInput.files[0]),
                    date: formData.get('portfolioDate'),
                    isFeatured: document.getElementById('isFeatured').checked,
                    createdAt: new Date().toISOString()
                };
                
                portfolioData.push(newItem);
                displayPortfolio();
                
                // Reset form
                form.reset();
                removePortfolioPreview();
                
                // Show success message
                showToast('Item adicionado ao portfólio com sucesso!', 'success');
                
                // Scroll to portfolio gallery
                document.getElementById('portfolioItems').scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'start' 
                });
                
            } catch (error) {
                console.error('Erro ao carregar imagem:', error);
                showToast('Erro ao carregar imagem. Tente novamente.', 'danger');
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });

        // View Portfolio Item
        function viewPortfolioItem(itemId) {
            const item = portfolioData.find(i => i.id === itemId);
            if (!item) return;
            
            currentPortfolioItemId = itemId;
            
            document.getElementById('portfolioModalTitle').textContent = item.title;
            document.getElementById('portfolioModalImage').src = item.imageUrl;
            document.getElementById('portfolioModalImage').alt = item.title;
            document.getElementById('portfolioModalDescription').textContent = 
                item.description || 'Sem descrição disponível.';
            
            document.getElementById('portfolioModalDate').textContent = 
                item.date ? new Date(item.date).toLocaleDateString('pt-PT', {
                    day: '2-digit',
                    month: 'long',
                    year: 'numeric'
                }) : 'Data não especificada';
            
            const featuredBadge = document.getElementById('portfolioModalFeatured');
            if (item.isFeatured) {
                featuredBadge.textContent = 'Destacado';
                featuredBadge.className = 'badge bg-warning';
            } else {
                featuredBadge.textContent = 'Normal';
                featuredBadge.className = 'badge bg-secondary';
            }
            
            // Setup buttons
            document.getElementById('editPortfolioBtn').onclick = function() {
                editPortfolioItem(itemId);
                bootstrap.Modal.getInstance(document.getElementById('viewPortfolioModal')).hide();
            };
            
            document.getElementById('deletePortfolioBtn').onclick = function() {
                if (confirm('Tem certeza que deseja eliminar este item do portfólio?')) {
                    deletePortfolioItem(itemId);
                    bootstrap.Modal.getInstance(document.getElementById('viewPortfolioModal')).hide();
                }
            };
            
            const modal = new bootstrap.Modal(document.getElementById('viewPortfolioModal'));
            modal.show();
        }

        function editPortfolioItem(itemId) {
            const item = portfolioData.find(i => i.id === itemId);
            if (!item) return;
            
            // Fill form with item data
            document.getElementById('portfolioTitle').value = item.title;
            document.getElementById('portfolioDescription').value = item.description || '';
            document.getElementById('portfolioDate').value = item.date || '';
            document.getElementById('isFeatured').checked = item.isFeatured;
            
            // Show edit mode
            const form = document.getElementById('uploadPortfolioForm');
            const submitBtn = form.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="bi bi-save me-2"></i> Atualizar Item';
            submitBtn.className = 'btn btn-primary btn-lg px-5';
            
            // Store item ID for update
            form.dataset.editId = itemId;
            
            // Scroll to form
            form.scrollIntoView({ behavior: 'smooth', block: 'start' });
            
            showToast('Modo edição ativado. Atualize os dados e clique em "Atualizar Item".', 'info');
        }

        function deletePortfolioItem(itemId) {
            if (!confirm('Tem certeza que deseja eliminar permanentemente este item do portfólio?')) {
                return;
            }
            
            portfolioData = portfolioData.filter(item => item.id !== itemId);
            displayPortfolio();
            showToast('Item removido do portfólio com sucesso.', 'success');
        }

        // Profile Form Functions
        function initProfileForm() {
            // Bio character counter
            const bioTextarea = document.getElementById('bioTextarea');
            const charCount = document.getElementById('charCount');
            
            if (bioTextarea && charCount) {
                function updateCharCount() {
                    const length = bioTextarea.value.length;
                    charCount.textContent = length;
                    
                    if (length > 2000) {
                        charCount.classList.add('text-danger');
                        charCount.classList.remove('text-warning');
                    } else if (length > 1800) {
                        charCount.classList.remove('text-danger');
                        charCount.classList.add('text-warning');
                    } else {
                        charCount.classList.remove('text-danger', 'text-warning');
                    }
                }
                
                bioTextarea.addEventListener('input', updateCharCount);
                updateCharCount();
            }
            
            // Photo hover effect
            const profileContainer = document.getElementById('profilePhotoContainer');
            if (profileContainer) {
                profileContainer.addEventListener('mouseenter', () => {
                    profileContainer.querySelector('.profile-overlay').style.opacity = '1';
                });
                
                profileContainer.addEventListener('mouseleave', () => {
                    profileContainer.querySelector('.profile-overlay').style.opacity = '0';
                });
            }
        }

        function previewImage(input) {
            const preview = document.getElementById('preview');
            const imagePreview = document.getElementById('imagePreview');
            
            if (input.files && input.files[0]) {
                const file = input.files[0];
                
                if (file.size > 5 * 1024 * 1024) {
                    showToast('A imagem é muito grande. Máximo: 5MB', 'danger');
                    input.value = '';
