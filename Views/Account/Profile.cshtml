    <script>
        // Portfolio Data
        let portfolioData = [];
        let currentPortfolioItemId = null;

        // Load portfolio on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadPortfolio();
            loadServices();
            initProfileForm();
        });

        // Portfolio Functions
        async function loadPortfolio() {
            try {
                // Simulate API call - replace with real API
                portfolioData = [
