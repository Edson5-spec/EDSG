@model EDSG.Controllers.ProfileViewModel
@{
    ViewData["Title"] = "Meu Perfil";
    var categoriasExistentes = ViewBag.CategoriasExistentes as List<string> ?? new List<string>();
}

<div class="container">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <!-- Profile Card -->
            <div class="card shadow-sm mb-4 profile-sidebar-card">
                <div class="card-body text-center">
                    <div class="mb-3 position-relative">
                        <div id="profilePhotoContainer" class="mx-auto rounded-circle overflow-hidden bg-gradient-primary text-white d-flex align-items-center justify-content-center"
                             style="width: 120px; height: 120px; cursor: pointer;" 
                             onclick="document.getElementById('FotoPerfil').click()">
                            @if (!string.IsNullOrEmpty(Model.FotoPerfilUrl)) {
                                <img id="profileImage" src="@Model.FotoPerfilUrl" alt="@Model.Nome"
                                     class="img-fluid w-100 h-100 object-fit-cover" />
                            } else {
                                <span id="profileInitial" class="display-4 fw-bold">@Model.Nome.Substring(0, 1).ToUpper()</span>
                            }
                            <div class="profile-overlay d-flex align-items-center justify-content-center">
                                <i class="bi bi-camera-fill text-white fs-4"></i>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-muted">Clique para alterar</small>
                        </div>
                    </div>
                    <h4 class="card-title mb-1">@Model.Nome</h4>
                    <p class="text-muted mb-3">@Model.Email</p>
                    
                    @if (!string.IsNullOrEmpty(Model.Categoria)) {
                        <div class="mb-3">
                            <span class="badge bg-primary-gradient px-3 py-2">
                                <i class="bi bi-tag"></i> @Model.Categoria
                            </span>
                        </div>
                    }

                    <div class="d-grid gap-2 mt-3">
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-speedometer2 me-2"></i> Dashboard
                        </a>
                        <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-outline-secondary">
                            <i class="bi bi-key me-2"></i> Alterar Password
                        </a>
                        <a asp-controller="Account" asp-action="ChangeEmail" class="btn btn-outline-warning">
                            <i class="bi bi-envelope me-2"></i> Alterar Email
                        </a>
                    </div>
                </div>
            </div>

            <!-- Stats Card -->
            <div class="card shadow-sm stats-card">
                <div class="card-header bg-gradient-light">
                    <h6 class="mb-0"><i class="bi bi-graph-up"></i> Estatísticas</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-3">
                            <span class="d-flex align-items-center">
                                <i class="bi bi-calendar-check text-primary me-2"></i>
                                <span>Membro desde</span>
                            </span>
                            <span class="badge bg-primary">@DateTime.Now.AddMonths(-6).ToString("MMM yyyy")</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-3">
                            <span class="d-flex align-items-center">
                                <i class="bi bi-check-circle text-success me-2"></i>
                                <span>Serviços Realizados</span>
                            </span>
                            <span class="badge bg-success">12</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-3">
                            <span class="d-flex align-items-center">
                                <i class="bi bi-star text-warning me-2"></i>
                                <span>Avaliação Média</span>
                            </span>
                            <span class="badge bg-warning">4.8</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-3">
                            <span class="d-flex align-items-center">
                                <i class="bi bi-circle-fill text-info me-2"></i>
                                <span>Status</span>
                            </span>
                            <span class="badge bg-info">Ativo</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Tabs Navigation -->
            <div class="card shadow-sm mb-4">
                <div class="card-body p-0">
                    <ul class="nav nav-pills nav-justified" id="profileTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="perfil-tab" data-bs-toggle="tab" data-bs-target="#perfil" type="button">
                                <i class="bi bi-person-gear me-2"></i> Perfil
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="portfolio-tab" data-bs-toggle="tab" data-bs-target="#portfolio" type="button">
                                <i class="bi bi-images me-2"></i> Portfólio
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="servicos-tab" data-bs-toggle="tab" data-bs-target="#servicos" type="button">
                                <i class="bi bi-briefcase me-2"></i> Serviços
                            </button>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="tab-content" id="profileTabsContent">
                <!-- Perfil Tab -->
                <div class="tab-pane fade show active" id="perfil" role="tabpanel">
                    <div class="card shadow-lg border-0">
                        <div class="card-header bg-gradient-primary text-white">
                            <h4 class="mb-0"><i class="bi bi-person-gear me-2"></i> Editar Perfil</h4>
                        </div>
                        <div class="card-body p-4">
                            <form asp-controller="Account" asp-action="Profile" method="post" enctype="multipart/form-data" id="profileForm">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                                <!-- Alertas -->
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show">
                                        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                }
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show">
                                        <i class="bi bi-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                }

                                <input type="hidden" asp-for="FotoPerfilUrl" />
                                <input type="hidden" name="RemovePhoto" id="removePhotoHidden" value="false" />

                                <!-- Personal Info Section -->
                                <div class="section-card mb-4">
                                    <div class="section-header">
                                        <h5><i class="bi bi-person-circle me-2"></i> Informações Pessoais</h5>
                                    </div>
                                    <div class="section-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Nome" class="form-label fw-semibold">
                                                    <i class="bi bi-person me-1"></i> Nome Completo
                                                </label>
                                                <input asp-for="Nome" class="form-control form-control-lg" placeholder="Seu nome completo" />
                                                <span asp-validation-for="Nome" class="text-danger small"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Email" class="form-label fw-semibold">
                                                    <i class="bi bi-envelope me-1"></i> Email
                                                </label>
                                                <input asp-for="Email" class="form-control form-control-lg" readonly />
                                                <div class="form-text">
                                                    <i class="bi bi-info-circle me-1"></i> 
                                                    Use o botão "Alterar Email" para modificar
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Localizacao" class="form-label fw-semibold">
                                                <i class="bi bi-geo-alt me-1"></i> Localização
                                            </label>
                                            <input asp-for="Localizacao" class="form-control form-control-lg" placeholder="Ex: Lisboa, Portugal" />
                                            <span asp-validation-for="Localizacao" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Photo Upload Section -->
                                <div class="section-card mb-4">
                                    <div class="section-header">
                                        <h5><i class="bi bi-camera me-2"></i> Foto de Perfil</h5>
                                    </div>
                                    <div class="section-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-4 text-center mb-3 mb-md-0">
                                                <div class="current-photo-container">
                                                    @if (!string.IsNullOrEmpty(Model.FotoPerfilUrl)) {
                                                        <img src="@Model.FotoPerfilUrl" alt="Foto atual" 
                                                             class="img-fluid rounded-circle border border-3 border-primary" 
                                                             style="width: 150px; height: 150px; object-fit: cover;">
                                                    } else {
                                                        <div class="rounded-circle bg-gradient-primary text-white d-flex align-items-center justify-content-center mx-auto"
                                                             style="width: 150px; height: 150px; font-size: 3rem;">
                                                            @Model.Nome.Substring(0, 1).ToUpper()
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <label asp-for="FotoPerfil" class="form-label fw-semibold">
                                                    <i class="bi bi-upload me-1"></i> Nova Foto
                                                </label>
                                                <div class="input-group input-group-lg">
                                                    <input asp-for="FotoPerfil" class="form-control" type="file" 
                                                           id="FotoPerfil" accept=".jpg,.jpeg,.png,.gif"
                                                           onchange="previewImage(this)" />
                                                    <button class="btn btn-outline-secondary" type="button" onclick="document.getElementById('FotoPerfil').click()">
                                                        <i class="bi bi-folder2-open"></i>
                                                    </button>
                                                </div>
                                                <span asp-validation-for="FotoPerfil" class="text-danger small"></span>
                                                <div class="form-text mt-2">
                                                    <i class="bi bi-info-circle me-1"></i>
                                                    Formatos: JPG, JPEG, PNG, GIF. Tamanho máximo: 5MB.
                                                </div>
                                                @if (!string.IsNullOrEmpty(Model.FotoPerfilUrl)) {
                                                    <div class="mt-2">
                                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="removePhoto()">
                                                            <i class="bi bi-trash me-1"></i> Remover foto atual
                                                        </button>
                                                    </div>
                                                }
                                                <div id="imagePreview" class="mt-3" style="display: none;">
                                                    <div class="alert alert-info">
                                                        <i class="bi bi-image me-2"></i>
                                                        <strong>Pré-visualização:</strong>
                                                    </div>
                                                    <img id="preview" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Professional Info Section -->
                                <div class="section-card mb-4">
                                    <div class="section-header">
                                        <h5><i class="bi bi-briefcase me-2"></i> Informações Profissionais</h5>
                                    </div>
                                    <div class="section-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Categoria" class="form-label fw-semibold">
                                                    <i class="bi bi-tag me-1"></i> Categoria Principal
                                                </label>
                                                <input asp-for="Categoria" class="form-control form-control-lg" 
                                                       list="categoriasList" placeholder="Selecione ou digite uma categoria" 
                                                       id="categoriaInput" />
                                                <datalist id="categoriasList">
                                                    @foreach (var categoria in categoriasExistentes)
                                                    {
                                                        <option value="@categoria"></option>
                                                    }
                                                    <option value="Tecnologia"></option>
                                                    <option value="Design"></option>
                                                    <option value="Marketing"></option>
                                                    <option value="Consultoria"></option>
                                                    <option value="Educação"></option>
                                                    <option value="Saúde"></option>
                                                    <option value="Construção"></option>
                                                    <option value="Finanças"></option>
                                                    <option value="Direito"></option>
                                                    <option value="Engenharia"></option>
                                                    <option value="Arquitetura"></option>
                                                    <option value="Moda"></option>
                                                    <option value="Gastronomia"></option>
                                                    <option value="Fotografia"></option>
                                                    <option value="Música"></option>
                                                    <option value="Treino Pessoal"></option>
                                                    <option value="Psicologia"></option>
                                                    <option value="Coaching"></option>
                                                    <option value="Tradução"></option>
                                                    <option value="Outro"></option>
                                                </datalist>
                                                <span asp-validation-for="Categoria" class="text-danger small"></span>
                                                <div class="form-text">
                                                    <i class="bi bi-lightbulb me-1"></i>
                                                    Selecione uma categoria existente ou crie uma nova
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Especialidade" class="form-label fw-semibold">
                                                    <i class="bi bi-stars me-1"></i> Especialidade
                                                </label>
                                                <input asp-for="Especialidade" class="form-control form-control-lg" 
                                                       placeholder="Ex: Desenvolvimento Web, Design Gráfico" />
                                                <span asp-validation-for="Especialidade" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="PrecoBase" class="form-label fw-semibold">
                                                    <i class="bi bi-currency-euro me-1"></i> Preço Base
                                                </label>
                                                <div class="input-group input-group-lg">
                                                    <span class="input-group-text bg-light">€</span>
                                                    <input asp-for="PrecoBase" class="form-control" placeholder="0.00" />
                                                    <span class="input-group-text bg-light">/hora</span>
                                                </div>
                                                <span asp-validation-for="PrecoBase" class="text-danger small"></span>
                                                <div class="form-text">
                                                    <i class="bi bi-info-circle me-1"></i>
                                                    Preço base por hora de serviço (opcional)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Bio Section -->
                                <div class="section-card mb-4">
                                    <div class="section-header">
                                        <h5><i class="bi bi-card-text me-2"></i> Biografia</h5>
                                    </div>
                                    <div class="section-body">
                                        <label asp-for="Bio" class="form-label fw-semibold">
                                            <i class="bi bi-pencil me-1"></i> Sobre Você
                                        </label>
                                        <textarea asp-for="Bio" class="form-control" rows="5" id="bioTextarea"
                                                  placeholder="Conte-nos sobre sua experiência, habilidades, serviços que oferece e o que torna seu trabalho especial..."></textarea>
                                        <span asp-validation-for="Bio" class="text-danger small"></span>
                                        <div class="d-flex justify-content-between align-items-center mt-2">
                                            <div class="form-text">
                                                <i class="bi bi-info-circle me-1"></i>
                                                Esta descrição aparecerá no seu perfil público
                                            </div>
                                            <div class="char-count">
                                                <span id="charCount">0</span>/2000 caracteres
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Submit Section -->
                                <div class="d-flex justify-content-between pt-4 mt-3 border-top">
                                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-lg btn-outline-secondary">
                                        <i class="bi bi-x-circle me-2"></i> Cancelar
                                    </a>
                                    <button type="submit" class="btn btn-lg btn-primary" id="submitBtn">
                                        <i class="bi bi-check-circle me-2"></i> Guardar Alterações
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Portfólio Tab -->
                <div class="tab-pane fade" id="portfolio" role="tabpanel">
                    <div class="card shadow-lg border-0">
                        <div class="card-header bg-gradient-success text-white">
                            <h4 class="mb-0"><i class="bi bi-images me-2"></i> Meu Portfólio</h4>
                        </div>
                        <div class="card-body p-4">
                            <!-- Upload Section -->
                            <div class="upload-section mb-5">
                                <div class="upload-card card border-dashed">
                                    <div class="card-body text-center p-5">
                                        <div class="mb-4">
                                            <i class="bi bi-cloud-upload display-4 text-success mb-3"></i>
                                            <h5>Adicione seus melhores trabalhos</h5>
                                            <p class="text-muted">Mostre suas habilidades através de imagens dos projetos realizados</p>
                                        </div>
                                        
                                        <form id="uploadPortfolioForm" enctype="multipart/form-data" class="mb-4">
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <div class="form-floating">
                                                        <input type="text" class="form-control" id="portfolioTitle" 
                                                               name="portfolioTitle" placeholder="Título do projeto" required>
                                                        <label for="portfolioTitle">
                                                            <i class="bi bi-card-heading me-1"></i> Título do Projeto *
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating">
                                                        <input type="date" class="form-control" id="portfolioDate" name="portfolioDate">
                                                        <label for="portfolioDate">
                                                            <i class="bi bi-calendar me-1"></i> Data do Projeto
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating">
                                                        <textarea class="form-control" id="portfolioDescription" 
                                                                  name="portfolioDescription" placeholder="Descrição" 
                                                                  style="height: 100px"></textarea>
                                                        <label for="portfolioDescription">
                                                            <i class="bi bi-text-paragraph me-1"></i> Descrição do Projeto
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="file-upload-area">
                                                        <label for="portfolioFile" class="file-upload-label">
                                                            <div class="file-upload-content">
                                                                <i class="bi bi-image fs-1 text-muted mb-3"></i>
                                                                <h6>Clique para selecionar uma imagem</h6>
                                                                <p class="text-muted small">Formatos: JPG, PNG, GIF • Máx: 10MB</p>
                                                            </div>
                                                            <input type="file" class="form-control d-none" 
                                                                   id="portfolioFile" name="portfolioFile" 
                                                                   accept=".jpg,.jpeg,.png,.gif" required
                                                                   onchange="previewPortfolioImage(this)">
                                                        </label>
                                                        <div id="portfolioImagePreview" class="mt-3 text-center" style="display: none;">
                                                            <div class="preview-container">
                                                                <img id="portfolioPreview" class="img-thumbnail preview-image">
                                                                <button type="button" class="btn btn-sm btn-danger remove-preview" 
                                                                        onclick="removePortfolioPreview()">
                                                                    <i class="bi bi-x"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" 
                                                               id="isFeatured" name="isFeatured" value="true">
                                                        <label class="form-check-label" for="isFeatured">
                                                            <i class="bi bi-star-fill text-warning me-1"></i>
                                                            Destacar este trabalho
                                                        </label>
                                                        <div class="form-text">
                                                            Trabalhos destacados aparecem primeiro no seu perfil
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="mt-4">
                                                <button type="submit" class="btn btn-success btn-lg px-5">
                                                    <i class="bi bi-upload me-2"></i> Carregar para Portfólio
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- Portfolio Gallery -->
                            <div class="portfolio-gallery">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h5 class="mb-0">
                                        <i class="bi bi-collection me-2"></i> Meus Trabalhos
                                        <span class="badge bg-success ms-2" id="portfolioCount">0</span>
                                    </h5>
                                    <div class="sort-controls">
                                        <select class="form-select form-select-sm" id="sortPortfolio" onchange="sortPortfolio()">
                                            <option value="featured">Destacados primeiro</option>
                                            <option value="recent">Mais recentes</option>
                                            <option value="oldest">Mais antigos</option>
                                            <option value="title">Título (A-Z)</option>
                                        </select>
                                    </div>
                                </div>
                                
                                <div id="portfolioItems" class="row g-4">
                                    <!-- Dynamic content will be loaded here -->
                                </div>
                                
                                <div id="emptyPortfolio" class="text-center py-5">
                                    <div class="empty-state">
                                        <i class="bi bi-images display-1 text-muted mb-3"></i>
                                        <h5 class="text-muted mb-2">Seu portfólio está vazio</h5>
                                        <p class="text-muted">Adicione seus melhores trabalhos para impressionar seus clientes!</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Serviços Tab -->
                <div class="tab-pane fade" id="servicos" role="tabpanel">
                    <div class="card shadow-lg border-0">
                        <div class="card-header bg-gradient-warning text-white">
                            <h4 class="mb-0"><i class="bi bi-briefcase me-2"></i> Meus Serviços</h4>
                        </div>
                        <div class="card-body p-4">
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Dica:</strong> Adicione os serviços que você oferece para que os clientes possam solicitá-los diretamente.
                            </div>
                            
                            <div id="servicesContent">
                                <!-- Services will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Cards -->
            <div class="row mt-4">
                <div class="col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-shield-check text-primary me-2"></i> Segurança</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-muted mb-4">Proteja sua conta com senha forte e mantenha seu email atualizado.</p>
                            <div class="d-grid gap-2">
                                <a asp-controller="Account" asp-action="ChangePassword" 
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-key me-2"></i> Alterar Palavra-passe
                                </a>
                                <a asp-controller="Account" asp-action="ChangeEmail" 
                                   class="btn btn-outline-warning">
                                    <i class="bi bi-envelope me-2"></i> Alterar Email
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-trash3 text-danger me-2"></i> Conta</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-muted mb-4">
                                Elimine permanentemente sua conta e todos os dados associados.
                                <span class="d-block mt-2 small text-danger">
                                    <i class="bi bi-exclamation-triangle"></i> Esta ação é irreversível!
                                </span>
                            </p>
                            <div class="d-grid">
