@model EDSG.Controllers.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar Palavra-passe";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center py-4">
                <h2><i class="bi bi-key"></i> Recuperar Palavra-passe</h2>
                <p class="mb-0">Introduza seu email para redefinir sua palavra-passe</p>
            </div>
            <div class="card-body p-5">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-4">
                        <label asp-for="Email" class="form-label fw-bold">Endereço de Email</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input asp-for="Email" class="form-control" placeholder="exemplo@email.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                        <div class="form-text mt-2">
                            <i class="bi bi-info-circle"></i> Enviaremos um link seguro para redefinir sua palavra-passe.
                        </div>
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-envelope-paper me-2"></i> Enviar Link de Recuperação
                        </button>
                    </div>

                    <div class="text-center">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i> Voltar para Login
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Informações de Segurança -->
        <div class="card border-0 bg-light mt-4">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="bi bi-shield-check text-primary me-2"></i> Informações Importantes
                </h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex">
                            <i class="bi bi-clock text-success me-3"></i>
                            <div>
                                <h6 class="fw-bold">Link Temporário</h6>
                                <p class="small mb-0">O link de recuperação é válido por 24 horas</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex">
                            <i class="bi bi-lock text-warning me-3"></i>
                            <div>
                                <h6 class="fw-bold">Segurança</h6>
                                <p class="small mb-0">Não compartilhe o link com ninguém</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex">
                            <i class="bi bi-envelope-check text-info me-3"></i>
                            <div>
                                <h6 class="fw-bold">Verificação</h6>
                                <p class="small mb-0">Verifique sua pasta de spam se não encontrar o email</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex">
                            <i class="bi bi-phone text-danger me-3"></i>
                            <div>
                                <h6 class="fw-bold">Suporte</h6>
                                <p class="small mb-0">Problemas? Contacte-nos: support@edsg.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Outras Opções -->
        <div class="text-center mt-4">
            <p class="text-muted">
                Não tem uma conta?
                <a asp-controller="Account" asp-action="Register" class="text-primary text-decoration-none">
                    <i class="bi bi-person-plus"></i> Registe-se aqui
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}